{
  CheckResult cr;
  if (prev != null && prev.size() > 0) {
    String realDirectory=transMeta.environmentSubstitute(directory);
    File f=new File(realDirectory);
    if (f.exists()) {
      if (f.isDirectory()) {
        cr=new CheckResult(CheckResultInterface.TYPE_RESULT_OK,Messages.getString("BlockingStepMeta.CheckResult.DirectoryExists",realDirectory),stepMeta);
        remarks.add(cr);
      }
 else {
        cr=new CheckResult(CheckResultInterface.TYPE_RESULT_ERROR,Messages.getString("BlockingStepMeta.CheckResult.ExistsButNoDirectory",realDirectory),stepMeta);
        remarks.add(cr);
      }
    }
 else {
      cr=new CheckResult(CheckResultInterface.TYPE_RESULT_ERROR,Messages.getString("BlockingStepMeta.CheckResult.DirectoryNotExists",realDirectory),stepMeta);
      remarks.add(cr);
    }
  }
 else {
    cr=new CheckResult(CheckResultInterface.TYPE_RESULT_ERROR,Messages.getString("BlockingStepMeta.CheckResult.NoFields"),stepMeta);
    remarks.add(cr);
  }
  if (input.length > 0) {
    cr=new CheckResult(CheckResultInterface.TYPE_RESULT_OK,Messages.getString("BlockingStepMeta.CheckResult.StepExpectingRowsFromOtherSteps"),stepMeta);
    remarks.add(cr);
  }
 else {
    cr=new CheckResult(CheckResultInterface.TYPE_RESULT_ERROR,Messages.getString("BlockingStepMeta.CheckResult.NoInputReceivedError"),stepMeta);
    remarks.add(cr);
  }
}
