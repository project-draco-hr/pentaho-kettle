{
  if (steps == null)   return;
  for (int i=0; i < steps.size(); i++) {
    StepMetaDataCombi sid=(StepMetaDataCombi)steps.get(i);
    BaseStep thr=(BaseStep)sid.step;
    log.logBasic(toString(),Messages.getString("Trans.Log.LookingAtStep") + thr.getStepname());
    while (thr.isAlive()) {
      thr.stopAll();
      try {
        Thread.sleep(20);
      }
 catch (      Exception e) {
        log.logError(toString(),Messages.getString("Trans.Log.TransformationErrors") + e.toString());
        return;
      }
    }
  }
}
