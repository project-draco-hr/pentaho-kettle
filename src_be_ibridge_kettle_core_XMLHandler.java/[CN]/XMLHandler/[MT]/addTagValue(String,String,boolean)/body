{
  StringBuffer value;
  if (val != null && val.length() > 0) {
    value=new StringBuffer("<");
    value.append(tag);
    value.append(">");
    appendReplacedChars(value,val);
    value.append("</");
    value.append(tag);
    value.append(">");
  }
 else {
    value=new StringBuffer("<");
    value.append(tag);
    value.append("/>");
  }
  if (cr) {
    value.append(Const.CR);
  }
  return value.toString();
}
