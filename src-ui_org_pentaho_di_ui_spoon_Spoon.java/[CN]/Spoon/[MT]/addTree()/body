  sep3.setBackground(GUIResource.getInstance().getColorWhite());
  FormData fdSep3=new FormData();
  fdSep3.left=new FormAttachment(0,0);
  fdSep3.right=new FormAttachment(100,0);
  fdSep3.top=new FormAttachment(lastControl,0);
