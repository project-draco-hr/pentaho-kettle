{
  try {
    StepLoader.init();
  }
 catch (  KettleException e) {
    throw new KettleException(BaseMessages.getString(PKG,"Spoon.Log.ErrorLoadingAndHaltSystem"),e);
  }
  try {
    JobEntryLoader.init();
  }
 catch (  KettleException e) {
    throw new KettleException("Error loading job entries & plugins... halting Spoon!",e);
  }
}
