{
  boolean empty=false;
  TableItem item=table.getItem(rownr);
  if (colnr >= 0) {
    String str=item.getText(colnr);
    if (str == null || str.length() == 0)     empty=true;
  }
 else {
    empty=true;
    for (int j=1; j < table.getColumnCount(); j++) {
      String str=item.getText(j);
      if (str != null && str.length() > 0)       empty=false;
    }
  }
  return empty;
}
