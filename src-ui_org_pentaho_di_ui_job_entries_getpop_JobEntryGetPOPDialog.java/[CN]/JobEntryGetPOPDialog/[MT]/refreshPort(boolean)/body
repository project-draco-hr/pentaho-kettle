{
  if (refreshport) {
    if (wProtocol.getText().equals(JobEntryGetPOP.PROTOCOL_STRING_POP3)) {
      if (wUseSSL.getSelection()) {
        if (Const.isEmpty(wPort.getText()) || wPort.getText().equals("" + MailConnection.DEFAULT_SSL_IMAP_PORT))         wPort.setText("" + JobEntryGetPOP.DEFAULT_SSL_POP3_PORT);
      }
 else {
        if (Const.isEmpty(wPort.getText()) || wPort.getText().equals(MailConnection.DEFAULT_IMAP_PORT))         wPort.setText("" + JobEntryGetPOP.DEFAULT_POP3_PORT);
      }
    }
 else {
      if (wUseSSL.getSelection()) {
        if (Const.isEmpty(wPort.getText()) || wPort.getText().equals("" + MailConnection.DEFAULT_SSL_POP3_PORT))         wPort.setText("" + JobEntryGetPOP.DEFAULT_SSL_IMAP_PORT);
      }
 else {
        if (Const.isEmpty(wPort.getText()) || wPort.getText().equals(MailConnection.DEFAULT_POP3_PORT))         wPort.setText("" + JobEntryGetPOP.DEFAULT_IMAP_PORT);
      }
    }
  }
}
