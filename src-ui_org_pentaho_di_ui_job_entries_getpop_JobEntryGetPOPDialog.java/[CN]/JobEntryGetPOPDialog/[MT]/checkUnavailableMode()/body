{
  if (wProtocol.getText().equals(JobEntryGetPOP.PROTOCOL_STRING_POP3) && JobEntryGetPOP.getActionTypeByDesc(wActionType.getText()) == JobEntryGetPOP.ACTION_TYPE_MOVE) {
    MessageBox mb=new MessageBox(shell,SWT.OK | SWT.ICON_ERROR);
    mb.setMessage("This action is not available for POP3!" + Const.CR + "Only one Folder (INBOX) is available in POP3."+ Const.CR+ "If you want to move messages to another folder,"+ Const.CR+ "please use IMAP protocol.");
    mb.setText("ERROR");
    mb.open();
    wActionType.setText(JobEntryGetPOP.getActionTypeDesc(JobEntryGetPOP.ACTION_TYPE_GET));
  }
}
