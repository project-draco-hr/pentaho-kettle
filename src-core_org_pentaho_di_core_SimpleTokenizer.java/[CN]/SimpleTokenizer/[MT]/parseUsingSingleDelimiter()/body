{
  String token=null;
  int delimiterPosition=0;
  if (delimiter.length() == 1)   delimiterPosition=text.indexOf(delimiter.charAt(0),position);
 else   delimiterPosition=text.indexOf(delimiter,position);
  if (delimiterPosition == -1) {
    token=text.substring(position,maxPosition);
    position=maxPosition + 1;
  }
 else {
    token=text.substring(position,delimiterPosition);
    position=delimiterPosition + delimiter.length();
  }
  return token;
}
