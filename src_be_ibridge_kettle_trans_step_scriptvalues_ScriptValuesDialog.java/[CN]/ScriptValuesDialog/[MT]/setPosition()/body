{
  String scr=wScript.getText();
  int linenr=wScript.getCaretLineNumber() + 1;
  int posnr=wScript.getCaretPosition();
  int colnr=0;
  while (posnr > 0 && scr.charAt(posnr - 1) != '\n' && scr.charAt(posnr - 1) != '\r') {
    posnr--;
    colnr++;
  }
  wlPosition.setText("Position: " + linenr + ", "+ colnr);
}
