{
  for (  UIRepositoryUser user : masterAvailableUserList) {
    if (user.getName().equals(name)) {
      availableUserList.add(user);
      break;
    }
  }
  this.firePropertyChange("availableUserList",null,availableUserList);
  if (userUnassignmentPossible && getSelectedUserList().size() > 0) {
    this.firePropertyChange("userUnassignmentPossible",null,true);
  }
 else {
    this.firePropertyChange("userUnassignmentPossible",null,false);
  }
}
