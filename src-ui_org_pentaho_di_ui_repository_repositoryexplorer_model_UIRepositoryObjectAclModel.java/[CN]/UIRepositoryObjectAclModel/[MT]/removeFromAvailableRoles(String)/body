{
  for (  UIRepositoryRole role : availableRoleList) {
    if (role.getName().equals(name)) {
      availableRoleList.remove(role);
      break;
    }
  }
  this.firePropertyChange("availableRoleList",null,availableRoleList);
  if (roleAssignmentPossible && availableRoleList.size() > 0) {
    this.firePropertyChange("roleAssignmentPossible",null,true);
  }
 else {
    this.firePropertyChange("roleAssignmentPossible",null,false);
  }
}
