{
  if (running) {
    if (!pausing) {
      pausing=true;
      trans.pauseRunning();
      wPause.setText(RESUME_TEXT);
      wStart.setEnabled(false);
      wPause.setEnabled(true);
      wStop.setEnabled(true);
    }
 else {
      pausing=false;
      trans.resumeRunning();
      wPause.setText(PAUSE_TEXT);
      wStart.setEnabled(false);
      wPause.setEnabled(true);
      wStop.setEnabled(true);
    }
  }
}
