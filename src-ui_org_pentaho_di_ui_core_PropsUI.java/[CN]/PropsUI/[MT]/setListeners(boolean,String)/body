{
  String s=properties.getProperty(IGNORE_LISTENERS);
  List<String> newList=new ArrayList<String>();
  if (s != null && s.trim().length() > 0) {
    String[] lists=s.split(",");
    for (    String list : lists) {
      if (list.equalsIgnoreCase(name)) {
        if (disabled)         continue;
      }
 else       newList.add(list);
    }
  }
  if (disabled)   newList.add(name);
  String props=StringUtils.join(newList.toArray(),",");
  properties.setProperty(IGNORE_LISTENERS,props);
}
