{
  StringBuffer retval=new StringBuffer();
  retval.append("    " + XMLHandler.addTagValue("field_to_use",fieldToUse));
  retval.append("    " + XMLHandler.addTagValue("target_field",targetField));
  retval.append("    <fields>" + Const.CR);
  for (int i=0; i < sourceValue.length; i++) {
    retval.append("      <field>" + Const.CR);
    retval.append("        " + XMLHandler.addTagValue("source_value",sourceValue[i]));
    retval.append("        " + XMLHandler.addTagValue("target_value",targetValue[i]));
    retval.append("        </field>" + Const.CR);
  }
  retval.append("      </fields>" + Const.CR);
  return retval.toString();
}
