{
  if (!gotPreviousFields) {
    try {
      String columnName=wFieldName.getText();
      wFieldName.removeAll();
      RowMetaInterface r=transMeta.getPrevStepFields(stepname);
      if (r != null) {
        r.getFieldNames();
        for (int i=0; i < r.getFieldNames().length; i++) {
          wFieldName.add(r.getFieldNames()[i]);
        }
      }
      wFieldName.setText(columnName);
      gotPreviousFields=true;
    }
 catch (    KettleException ke) {
      new ErrorDialog(shell,Messages.getString("CreditCardValidatorDialog.FailedToGetFields.DialogTitle"),Messages.getString("CreditCardValidatorDialog.FailedToGetFields.DialogMessage"),ke);
    }
  }
}
