{
  int idx=wFields.getSelectionIndex();
  if (idx >= 0) {
    int position=0;
    for (int i=0; i < idx; i++) {
      position+=fields.get(i).getWidth();
    }
    FixedFileInputField field=fields.get(idx);
    String name=field.getName();
    int width=field.getWidth();
    int length=field.getLength();
    String type=ValueMeta.getTypeDesc(field.getType());
    String format=field.getFormat();
    int precision=field.getPrecision();
    String currency=field.getCurrency();
    String decimal=field.getDecimal();
    String group=field.getGrouping();
    if (name != null)     wFieldname.setText(name);
    wWidth.setText("" + width);
    wLength.setText("" + length);
    if (type != null)     wFieldtype.setText(type);
    if (format != null)     wFormat.setText(format);
    wPrecision.setText("" + precision);
    if (currency != null)     wCurrency.setText(currency);
    if (decimal != null)     wDecimal.setText(decimal);
    if (group != null)     wGroup.setText(group);
    wSamples.removeAll();
    String samples[]=getRowSamples(position,width);
    for (int i=0; i < samples.length; i++)     wSamples.add(samples[i]);
  }
}
