{
  try {
    logBasic(Messages.getString("SortedMerge.Log.StartingToRun"));
    while (processRow(meta,data) && !isStopped())     ;
  }
 catch (  Throwable t) {
    logError(Messages.getString("SortedMerge.Log.UnexpectedError") + " : " + t.toString());
    logError(Const.getStackTracker(t));
    setErrors(1);
    stopAll();
  }
 finally {
    dispose(meta,data);
    logSummary();
    markStop();
  }
}
