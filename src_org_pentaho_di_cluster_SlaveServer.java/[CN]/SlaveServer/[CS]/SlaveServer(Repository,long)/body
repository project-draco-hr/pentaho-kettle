{
  this();
  setId(id_slave_server);
  RowMetaAndData row=rep.getSlaveServer(id_slave_server);
  if (row == null) {
    throw new KettleDatabaseException(BaseMessages.getString(PKG,"SlaveServer.SlaveCouldNotBeFound",Long.toString(id_slave_server)));
  }
  name=row.getString(Repository.FIELD_SLAVE_NAME,null);
  hostname=row.getString(Repository.FIELD_SLAVE_HOST_NAME,null);
  port=row.getString(Repository.FIELD_SLAVE_PORT,null);
  username=row.getString(Repository.FIELD_SLAVE_USERNAME,null);
  password=row.getString(Repository.FIELD_SLAVE_PASSWORD,null);
  proxyHostname=row.getString(Repository.FIELD_SLAVE_PROXY_HOST_NAME,null);
  proxyPort=row.getString(Repository.FIELD_SLAVE_PROXY_PORT,null);
  nonProxyHosts=row.getString(Repository.FIELD_SLAVE_NON_PROXY_HOSTS,null);
  master=row.getBoolean(Repository.FIELD_SLAVE_MASTER,false);
}
