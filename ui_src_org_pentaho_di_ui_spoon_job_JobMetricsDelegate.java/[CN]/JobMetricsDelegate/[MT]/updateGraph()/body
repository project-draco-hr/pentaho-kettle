{
  jobGraph.getDisplay().asyncExec(new Runnable(){
    public void run(){
      if (metricsComposite != null && !metricsComposite.isDisposed() && canvas != null && !canvas.isDisposed() && jobMetricsTab != null && !jobMetricsTab.isDisposed()) {
        if (jobMetricsTab.isShowing()) {
          canvas.redraw();
        }
      }
    }
  }
);
}
