  new MenuItem(mRow,SWT.SEPARATOR);
  MenuItem miCol1=new MenuItem(mRow,SWT.NONE);
  miCol1.setText(Messages.getString("TableView.menu.OptimalSizeWithHeader"));
  MenuItem miCol2=new MenuItem(mRow,SWT.NONE);
  miCol2.setText(Messages.getString("TableView.menu.OptimalSizeWithoutHeader"));
  new MenuItem(mRow,SWT.SEPARATOR);
  MenuItem miClear=new MenuItem(mRow,SWT.NONE);
  miClear.setText(Messages.getString("TableView.menu.ClearAll"));
  new MenuItem(mRow,SWT.SEPARATOR);
