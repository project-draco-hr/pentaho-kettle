{
  int block=0;
  do {
    if (s < len - 1) {
      if (in[s] == '/' && in[s + 1] == '*') {
        block++;
      }
 else       if (in[s] == '*' && in[s + 1] == '/') {
        block--;
      }
      out[d++]=in[s++];
    }
 else {
      throw new SQLException(BaseMessages.getString(PKG,"error.parsesql.missing","*/"),"22025");
    }
  }
 while (block > 0);
  out[d++]=in[s++];
}
