{
  TableItem row=cursor.getRow();
  if (row == null)   return;
  int rownr=table.indexOf(row);
  if (rownr >= 0) {
    moveRow(rownr + 1,rownr);
    TransAction ta=new TransAction();
    ta.setItemMove(new int[]{rownr + 1},new int[]{rownr});
    addUndo(ta);
    if (edit)     edit(rownr,1);
    setRowNums();
  }
}
