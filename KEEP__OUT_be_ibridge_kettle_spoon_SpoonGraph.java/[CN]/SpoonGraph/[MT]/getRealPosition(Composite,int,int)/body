{
  Point p=new Point(0,0);
  Composite follow=canvas;
  while (follow != null) {
    org.eclipse.swt.graphics.Point loc=follow.getLocation();
    Point xy=new Point(loc.x,loc.y);
    p.x+=xy.x;
    p.y+=xy.y;
    follow=follow.getParent();
  }
  p.x=x - p.x - 16;
  p.y=y - p.y - 64;
  return screen2real(p.x,p.y);
}
