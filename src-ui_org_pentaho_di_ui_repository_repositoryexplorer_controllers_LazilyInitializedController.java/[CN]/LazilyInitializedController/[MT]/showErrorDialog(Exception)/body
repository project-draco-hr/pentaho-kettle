{
  XulMessageBox messageBox=null;
  try {
    messageBox=(XulMessageBox)document.createElement("messagebox");
  }
 catch (  XulException xe) {
    throw new RuntimeException(xe);
  }
  messageBox.setTitle(messages.getString("Dialog.Error"));
  messageBox.setAcceptLabel(messages.getString("Dialog.Ok"));
  if (e != null) {
    messageBox.setMessage(BaseMessages.getString(RepositoryExplorer.class,"LazilyInitializedController.Message.UnableToInitWithParam",e.getLocalizedMessage()));
  }
 else {
    messageBox.setMessage(BaseMessages.getString(RepositoryExplorer.class,"LazilyInitializedController.Message.UnableToInit"));
  }
  messageBox.open();
}
