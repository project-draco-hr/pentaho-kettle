{
  StringBuffer retval=new StringBuffer(300);
  retval.append("    <fields>");
  for (int i=0; i < selectName.length; i++) {
    retval.append("      <field>");
    retval.append("        ").append(XMLHandler.addTagValue(SelectValuesAttr.FIELD_NAME,selectName[i]));
    retval.append("        ").append(XMLHandler.addTagValue(SelectValuesAttr.FIELD_RENAME,selectRename[i]));
    retval.append("        ").append(XMLHandler.addTagValue(SelectValuesAttr.FIELD_LENGTH,selectLength[i]));
    retval.append("        ").append(XMLHandler.addTagValue(SelectValuesAttr.FIELD_PRECISION,selectPrecision[i]));
    retval.append("      </field>");
  }
  retval.append("        ").append(XMLHandler.addTagValue(SelectValuesAttr.SELECT_UNSPECIFIED,selectingAndSortingUnspecifiedFields));
  for (int i=0; i < deleteName.length; i++) {
    retval.append("      <remove>");
    retval.append("        ").append(XMLHandler.addTagValue("name",deleteName[i]));
    retval.append("      </remove>");
  }
  for (int i=0; i < meta.length; i++) {
    retval.append(meta[i].getXML());
  }
  retval.append("    </fields>");
  return retval.toString();
}
