{
  try {
    if (rep != null && slaveServer.getId() > 0) {
      rep.delSlave(slaveServer.getId());
    }
    int idx=transMeta.getSlaveServers().indexOf(slaveServer);
    transMeta.getSlaveServers().remove(idx);
    refreshTree();
  }
 catch (  KettleException e) {
    new ErrorDialog(shell,Messages.getString("Spoon.Dialog.ErrorDeletingSlave.Title"),Messages.getString("Spoon.Dialog.ErrorDeletingSlave.Message"),e);
  }
}
