{
  if (first) {
    first=false;
    data.argnrs=new int[meta.getArgumentField().length];
    for (int i=0; i < meta.getArgumentField().length; i++) {
      data.argnrs[i]=outputRowMeta.indexOfValue(meta.getArgumentField()[i]);
      if (data.argnrs[i] < 0) {
        logError(Messages.getString("HTTP.Log.ErrorFindingField") + meta.getArgumentField()[i] + "]");
        throw new KettleStepException(Messages.getString("HTTP.Exception.CouldnotFindField",meta.getArgumentField()[i]));
      }
    }
  }
  return callHttpService(outputRowMeta,row);
}
