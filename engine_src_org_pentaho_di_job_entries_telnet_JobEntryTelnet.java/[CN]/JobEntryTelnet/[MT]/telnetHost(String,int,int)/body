{
  Socket socket=new Socket();
  try {
    InetSocketAddress is=new InetSocketAddress(host,port);
    if (timeout < 0)     socket.connect(is);
 else     socket.connect(is,timeout);
  }
 catch (  Exception e) {
    throw new KettleException(e);
  }
 finally {
    try {
      socket.close();
    }
 catch (    Exception e) {
    }
  }
}
