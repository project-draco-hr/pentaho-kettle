{
  List<FileErrorHandler> errorHandlers=new ArrayList<FileErrorHandler>(2);
  if (meta.getLineNumberFilesDestinationDirectory() != null)   errorHandlers.add(new FileErrorHandlerContentLineNumber(getTrans().getCurrentDate(),environmentSubstitute(meta.getLineNumberFilesDestinationDirectory()),meta.getLineNumberFilesExtension(),"Latin1",this));
  if (meta.getErrorFilesDestinationDirectory() != null)   errorHandlers.add(new FileErrorHandlerMissingFiles(getTrans().getCurrentDate(),environmentSubstitute(meta.getErrorFilesDestinationDirectory()),meta.getErrorFilesExtension(),"Latin1",this));
  data.errorHandler=new CompositeFileErrorHandler(errorHandlers);
}
