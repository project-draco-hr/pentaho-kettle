{
  int count=0;
  for (int i=0; i < nrJobHops(); i++) {
    JobHopMeta hi=getJobHop(i);
    if (hi.from_entry.getName().equalsIgnoreCase(name) || hi.to_entry.getName().equalsIgnoreCase(name)) {
      count++;
    }
  }
  JobHopMeta retval[]=new JobHopMeta[count];
  count=0;
  for (int i=0; i < nrJobHops(); i++) {
    JobHopMeta hi=getJobHop(i);
    if (hi.from_entry.getName().equalsIgnoreCase(name) || hi.to_entry.getName().equalsIgnoreCase(name)) {
      retval[count]=hi;
      count++;
    }
  }
  return retval;
}
