{
  this.log=log;
  try {
    String xml=KettleVFS.getFileContent(fname);
    Document doc=XMLHandler.loadXMLString(xml);
    if (doc != null) {
      clear();
      Node jobnode=XMLHandler.getSubNode(doc,XML_TAG);
      loadXML(jobnode,rep);
      setFilename(fname);
    }
 else {
      throw new KettleXMLException(Messages.getString("JobMeta.Exception.ErrorReadingFromXMLFile") + fname);
    }
  }
 catch (  Exception e) {
    throw new KettleXMLException(Messages.getString("JobMeta.Exception.UnableToLoadJobFromXMLFile") + fname + "]",e);
  }
}
