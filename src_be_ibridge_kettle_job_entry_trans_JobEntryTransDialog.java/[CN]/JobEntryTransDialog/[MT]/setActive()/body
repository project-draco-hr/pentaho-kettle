  wLoglevel.setEnabled(wSetLogfile.getSelection());
  if (jobentry.setLogfile) {
    wLoglevel.setForeground(display.getSystemColor(SWT.COLOR_BLACK));
  }
 else {
    wLoglevel.setForeground(display.getSystemColor(SWT.COLOR_GRAY));
  }
}
