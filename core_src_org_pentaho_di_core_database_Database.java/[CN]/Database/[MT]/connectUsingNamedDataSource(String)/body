{
  connection=null;
  DataSource dataSource=DataSourceProviderFactory.getDataSourceProviderInterface().getNamedDataSource(dataSourceName);
  if (dataSource != null) {
    try {
      connection=dataSource.getConnection();
    }
 catch (    SQLException e) {
      throw new KettleDatabaseException("Invalid named connection " + dataSourceName + " : "+ e.getMessage());
    }
    if (connection == null) {
      throw new KettleDatabaseException("Invalid named connection " + dataSourceName);
    }
  }
 else {
    throw new KettleDatabaseException("Invalid named connection " + dataSourceName);
  }
}
