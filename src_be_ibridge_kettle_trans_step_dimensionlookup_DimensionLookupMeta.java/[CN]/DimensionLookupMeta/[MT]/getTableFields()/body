{
  LogWriter log=LogWriter.getInstance();
  Row fields=null;
  if (database != null) {
    Database db=new Database(database);
    try {
      db.connect();
      fields=db.getTableFields(tableName);
    }
 catch (    KettleDatabaseException dbe) {
      log.logError(toString(),"A database error occurred: " + dbe.getMessage());
    }
 finally {
      db.disconnect();
    }
  }
  return fields;
}
