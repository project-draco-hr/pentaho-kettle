{
  wConn.setText(NVL(databaseMeta == null ? "" : databaseMeta.getName(),""));
  wConnType.select(databaseMeta.getDatabaseType() - 1);
  wConnType.showSelection();
  previousDatabaseType=DatabaseMeta.getDatabaseTypeCode(wConnType.getSelectionIndex());
  setAccessList();
  String accessList[]=wConnAcc.getItems();
  int accessIndex=Const.indexOfString(databaseMeta.getAccessTypeDesc(),accessList);
  wConnAcc.select(accessIndex);
  wConnAcc.showSelection();
  wHostName.setText(NVL(databaseMeta.getHostname(),""));
  wDBName.setText(NVL(databaseMeta.getDatabaseName(),""));
  wPort.setText(NVL(databaseMeta.getDatabasePortNumberString(),""));
  wServername.setText(NVL(databaseMeta.getServername(),""));
  wUsername.setText(NVL(databaseMeta.getUsername(),""));
  wPassword.setText(NVL(databaseMeta.getPassword(),""));
  wData.setText(NVL(databaseMeta.getDataTablespace(),""));
  wIndex.setText(NVL(databaseMeta.getIndexTablespace(),""));
  wSAPLanguage.setText(databaseMeta.getAttributes().getProperty(SAPR3DatabaseMeta.ATTRIBUTE_SAP_LANGUAGE,""));
  wSAPSystemNumber.setText(databaseMeta.getAttributes().getProperty(SAPR3DatabaseMeta.ATTRIBUTE_SAP_SYSTEM_NUMBER,""));
  wSAPClient.setText(databaseMeta.getAttributes().getProperty(SAPR3DatabaseMeta.ATTRIBUTE_SAP_CLIENT,""));
  wURL.setText(databaseMeta.getAttributes().getProperty(GenericDatabaseMeta.ATRRIBUTE_CUSTOM_URL,""));
  wDriverClass.setText(databaseMeta.getAttributes().getProperty(GenericDatabaseMeta.ATRRIBUTE_CUSTOM_DRIVER_CLASS,""));
  wStreamResult.setSelection(databaseMeta.isStreamingResults());
  wQuoteAllFields.setSelection(databaseMeta.isQuoteAllFields());
  wForceIdentifiersLowerCase.setSelection(databaseMeta.isForcingIdentifiersToLowerCase());
  wForceIdentifiersUpperCase.setSelection(databaseMeta.isForcingIdentifiersToUpperCase());
  getOptionsData();
  checkPasswordVisible(wPassword.getTextWidget());
  wSQL.setText(NVL(databaseMeta.getConnectSQL(),""));
  getPoolingData();
  wDoubleDecimalSeparator.setSelection(databaseMeta.isUsingDoubleDecimalAsSchemaTableSeparator());
  if (databaseMeta.getSQLServerInstance() != null)   wInstanceName.setText(databaseMeta.getSQLServerInstance());
  wConn.setFocus();
  wConn.selectAll();
  getClusterData();
}
