{
  DatabaseMeta dbinfo=new DatabaseMeta();
  try {
    getInfo(dbinfo);
    DatabaseExplorerDialog ded=new DatabaseExplorerDialog(shell,SWT.NONE,dbinfo,databases,true);
    ded.open();
  }
 catch (  KettleException e) {
    new ErrorDialog(shell,Messages.getString("DatabaseDialog.ErrorParameters.title"),Messages.getString("DatabaseDialog.ErrorParameters.description"),e);
  }
}
