{
  try {
    hostname=rep.getStepAttributeString(id_step,"hostname");
    port=rep.getStepAttributeString(id_step,"port");
    dbName=rep.getStepAttributeString(id_step,"db_name");
    collection=rep.getStepAttributeString(id_step,"collection");
    jsonFieldName=rep.getStepAttributeString(id_step,"json_field_name");
    jsonQuery=rep.getStepAttributeString(id_step,"json_query");
    authenticationUser=rep.getStepAttributeString(id_step,"auth_user");
    authenticationPassword=Encr.decryptPasswordOptionallyEncrypted(rep.getStepAttributeString(id_step,"auth_password"));
  }
 catch (  Exception e) {
    throw new KettleException(BaseMessages.getString(PKG,"MongoDbInputMeta.Exception.UnexpectedErrorWhileReadingStepInfo"),e);
  }
}
