{
  try {
    hostname=XMLHandler.getTagValue(stepnode,"hostname");
    port=XMLHandler.getTagValue(stepnode,"port");
    dbName=XMLHandler.getTagValue(stepnode,"db_name");
    collection=XMLHandler.getTagValue(stepnode,"collection");
    jsonFieldName=XMLHandler.getTagValue(stepnode,"json_field_name");
    jsonQuery=XMLHandler.getTagValue(stepnode,"json_query");
    authenticationUser=XMLHandler.getTagValue(stepnode,"auth_user");
    authenticationPassword=Encr.decryptPasswordOptionallyEncrypted(XMLHandler.getTagValue(stepnode,"auth_password"));
  }
 catch (  Exception e) {
    throw new KettleXMLException(BaseMessages.getString(PKG,"MongoDbInputMeta.Exception.UnableToLoadStepInfo"),e);
  }
}
