{
  meta=(TableExistsMeta)smi;
  data=(TableExistsData)sdi;
  if (super.init(smi,sdi)) {
    if (Const.isEmpty(meta.getResultFieldName())) {
      logError(BaseMessages.getString(PKG,"TableExists.Error.ResultFieldMissing"));
      return false;
    }
    data.db=new Database(this,meta.getDatabase());
    data.db.shareVariablesWith(this);
    if (!Const.isEmpty(meta.getSchemaname()))     data.realSchemaname=environmentSubstitute(meta.getSchemaname());
    try {
      if (getTransMeta().isUsingUniqueConnections()) {
synchronized (getTrans()) {
          data.db.connect(getTrans().getThreadName(),getPartitionID());
        }
      }
 else {
        data.db.connect(getPartitionID());
      }
      if (log.isDetailed())       logDetailed(BaseMessages.getString(PKG,"TableExists.Log.ConnectedToDB"));
      return true;
    }
 catch (    KettleException e) {
      logError(BaseMessages.getString(PKG,"TableExists.Log.DBException") + e.getMessage());
      if (data.db != null) {
        data.db.disconnect();
      }
    }
  }
  return false;
}
