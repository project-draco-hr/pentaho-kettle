{
  for (int i=0; i < slaveServers.size(); i++) {
    SlaveServer slaveServer=slaveServers.get(i);
    if (slaveServer.isMaster())     return slaveServer;
  }
  if (slaveServers.size() > 0) {
    throw new KettleException(Messages.getString("ClusterSchema.NoMasterServerDefined",name));
  }
  throw new KettleException(Messages.getString("ClusterSchema.NoSlaveServerDefined",name));
}
