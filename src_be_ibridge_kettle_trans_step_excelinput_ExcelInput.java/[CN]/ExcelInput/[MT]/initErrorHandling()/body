{
  List errorHandlers=new ArrayList(2);
  if (meta.getLineNumberFilesDestinationDirectory() != null)   errorHandlers.add(new FileErrorHandlerContentLineNumber(getTrans().getCurrentDate(),meta.getLineNumberFilesDestinationDirectory(),meta.getLineNumberFilesExtension(),"Latin1"));
  if (meta.getErrorFilesDestinationDirectory() != null)   errorHandlers.add(new FileErrorHandlerMissingFiles(getTrans().getCurrentDate(),meta.getErrorFilesDestinationDirectory(),meta.getErrorFilesExtension(),"Latin1"));
  data.errorHandler=new CompositeFileErrorHandler(errorHandlers);
}
