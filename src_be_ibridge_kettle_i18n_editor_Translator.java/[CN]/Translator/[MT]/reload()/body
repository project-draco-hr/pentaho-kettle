{
  try {
    clear();
    shell.setCursor(display.getSystemCursor(SWT.CURSOR_WAIT));
    readFiles(ROOT);
    shell.setCursor(null);
    javaFiles=new Hashtable(500);
    refresh();
  }
 catch (  Exception e) {
    new ErrorDialog(shell,"Error loading data","There was an unexpected error re-loading the data",e);
  }
}
