{
  log.println(LogWriter.LOG_LEVEL_BASIC,"checkAlerts");
  final boolean fieldsOk=wFields.nrNonEmpty() != 0;
  final boolean sheetsOk=wSheetnameList.nrNonEmpty() != 0;
  final boolean filesOk=wFilenameList.nrNonEmpty() != 0;
  String msgText="";
  if (!fieldsOk) {
    msgText=("Add Field(s)");
  }
 else   if (!sheetsOk) {
    msgText=("Add sheet(s)");
  }
 else   if (!filesOk) {
    msgText=("Add filename(s)");
  }
  tagTab(!fieldsOk,wFieldsTab,Messages.getString("ExcelInputDialog.FieldsTab.TabTitle"));
  tagTab(!sheetsOk,wSheetTab,Messages.getString("ExcelInputDialog.SheetsTab.TabTitle"));
  tagTab(!filesOk,wFileTab,Messages.getString("ExcelInputDialog.FileTab.TabTitle"));
  wPreview.setEnabled(fieldsOk && sheetsOk && filesOk);
  wlStatusMessage.setText(msgText);
}
