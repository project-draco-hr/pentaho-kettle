{
  if (getType() == VALUE_TYPE_BOOLEAN) {
    if (args.length == 1) {
      if (getBoolean())       setValue(args[0]);
 else       setNull();
    }
 else     if (args.length == 2) {
      if (getBoolean())       setValue(args[0]);
 else       setValue(args[1]);
    }
  }
 else {
    throw new KettleValueException("Function DECODE can't have " + args.length + " arguments!");
  }
  return this;
}
