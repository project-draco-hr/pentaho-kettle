{
  try {
    clustersTable=(XulTree)document.getElementById("clusters-table");
    bf.setBindingType(Binding.Type.ONE_WAY);
    bf.createBinding(clusterList,"children",clustersTable,"elements");
    bf.createBinding(clustersTable,"selectedItems",this,"enableButtons",new BindingConvertor<List<UICluster>,Boolean>(){
      @Override public Boolean sourceToTarget(      List<UICluster> clusters){
        if (clusters != null && clusters.size() > 0) {
          return true;
        }
        return false;
      }
      @Override public List<UICluster> targetToSource(      Boolean enabled){
        return null;
      }
    }
);
  }
 catch (  Exception e) {
    throw new RuntimeException(e);
  }
  refreshClusters();
}
