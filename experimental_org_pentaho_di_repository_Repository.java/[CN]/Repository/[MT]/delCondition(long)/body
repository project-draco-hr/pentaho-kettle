{
  boolean ok=true;
  long ids[]=getSubConditionIDs(id_condition);
  if (ids.length > 0) {
    for (int i=0; i < ids.length && ok; i++) {
      delCondition(ids[i]);
    }
    delCondition(id_condition);
  }
 else {
    String sql="DELETE FROM R_CONDITION WHERE ID_CONDITION = " + id_condition;
    database.execStatement(sql);
  }
}
