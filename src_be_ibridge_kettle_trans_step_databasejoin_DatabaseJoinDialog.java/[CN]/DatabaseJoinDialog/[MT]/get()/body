{
  try {
    Row r=transMeta.getPrevStepFields(stepname);
    if (r != null) {
      Table table=wParam.table;
      for (int i=0; i < r.size(); i++) {
        Value v=r.getValue(i);
        TableItem ti=new TableItem(table,SWT.NONE);
        ti.setText(1,v.getName());
        ti.setText(2,v.getTypeDesc());
      }
      wParam.removeEmptyRows();
      wParam.setRowNums();
      wParam.optWidth(true);
    }
  }
 catch (  KettleException ke) {
    new ErrorDialog(shell,props,Messages.getString("DatabaseJoinDialog.GetFieldsFailed.DialogTitle"),Messages.getString("DatabaseJoinDialog.GetFieldsFailed.DialogMessage"),ke);
  }
}
