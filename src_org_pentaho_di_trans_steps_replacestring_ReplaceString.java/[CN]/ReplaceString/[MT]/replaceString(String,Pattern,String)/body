{
  if (originalString == null) {
    return null;
  }
  final Matcher matcher=pattern.matcher(originalString);
  if (replaceByString == null) {
    if (matcher.matches()) {
      return null;
    }
 else {
      return originalString;
    }
  }
 else {
    return matcher.replaceAll(replaceByString);
  }
}
