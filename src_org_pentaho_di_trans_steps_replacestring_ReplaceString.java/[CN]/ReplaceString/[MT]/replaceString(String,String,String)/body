{
  if (regex == null) {
    if (sourcestring == null)     return replaceBystring;
 else     return sourcestring;
  }
 else {
    if (sourcestring == null) {
      return null;
    }
 else {
      if (replaceBystring == null) {
        if (sourcestring.matches(regex))         return replaceBystring;
 else         return sourcestring;
      }
 else {
        return sourcestring.replaceAll(regex,replaceBystring);
      }
    }
  }
}
