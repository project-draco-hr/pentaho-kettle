{
  if (meta.isCreateParentFolder()) {
    FileObject parentfolder=null;
    try {
      parentfolder=data.file.getParent();
      if (!parentfolder.exists()) {
        if (log.isDetailed())         logDetailed(BaseMessages.getString(PKG,"PropertyOutput.Log.ParentFolderExists",parentfolder.getName().toString()));
        parentfolder.createFolder();
        if (log.isDetailed())         logDetailed(BaseMessages.getString(PKG,"PropertyOutput.Log.CanNotCreateParentFolder",parentfolder.getName().toString()));
      }
    }
 catch (    Exception e) {
      logError(BaseMessages.getString(PKG,"PropertyOutput.Log.CanNotCreateParentFolder",parentfolder.getName().toString()));
      throw new KettleException(BaseMessages.getString(PKG,"PropertyOutput.Log.CanNotCreateParentFolder",parentfolder.getName().toString()));
    }
 finally {
      if (parentfolder != null) {
        try {
          parentfolder.close();
        }
 catch (        Exception ex) {
        }
      }
    }
  }
}
