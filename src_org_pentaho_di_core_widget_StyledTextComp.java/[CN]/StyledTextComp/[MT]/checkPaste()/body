{
  try {
    Clipboard clipboard=new Clipboard(xParent.getDisplay());
    TextTransfer transfer=TextTransfer.getInstance();
    String text=(String)clipboard.getContents(transfer);
    if (text != null && text.length() > 0)     return true;
 else     return false;
  }
 catch (  Exception e) {
    return false;
  }
}
