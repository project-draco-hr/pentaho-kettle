{
  if (!gotPreviousFields) {
    gotPreviousFields=true;
    try {
      String fieldname=wFieldname.getText();
      wFieldname.removeAll();
      RowMetaInterface r=transMeta.getPrevStepFields(stepname);
      if (r != null) {
        wFieldname.setItems(r.getFieldNames());
        if (fieldname != null)         wFieldname.setText(fieldname);
      }
    }
 catch (    KettleException ke) {
      new ErrorDialog(shell,Messages.getString("ValueMapperDialog.FailedToGetFields.DialogTitle"),Messages.getString("ValueMapperDialog.FailedToGetFields.DialogMessage"),ke);
    }
  }
}
