{
  if (outputStreamWriter != null) {
    try {
      outputStreamWriter.flush();
    }
 catch (    IOException exception) {
      log.logError(Messages.getString("AbstractFileErrorHandler.Log.CouldNotFlushContentToFile"),exception.getLocalizedMessage());
    }
    try {
      outputStreamWriter.close();
    }
 catch (    IOException exception) {
      throw new KettleException(Messages.getString("AbstractFileErrorHandler.Exception.CouldNotCloseFile"),exception);
    }
 finally {
      outputStreamWriter=null;
    }
  }
}
