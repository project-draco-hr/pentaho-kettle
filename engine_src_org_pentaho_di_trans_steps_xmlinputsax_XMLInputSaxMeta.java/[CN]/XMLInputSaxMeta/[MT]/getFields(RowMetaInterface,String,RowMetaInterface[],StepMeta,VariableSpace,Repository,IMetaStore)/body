{
  for (int i=0; i < inputFields.length; i++) {
    XMLInputSaxField field=inputFields[i];
    int type=field.getType();
    if (type == ValueMeta.TYPE_NONE)     type=ValueMeta.TYPE_STRING;
    try {
      ValueMetaInterface v=ValueMetaFactory.createValueMeta(field.getName(),type);
      v.setLength(field.getLength());
      v.setPrecision(field.getPrecision());
      v.setConversionMask(field.getFormat());
      v.setGroupingSymbol(field.getGroupSymbol());
      v.setDecimalSymbol(field.getDecimalSymbol());
      v.setCurrencySymbol(field.getCurrencySymbol());
      v.setOrigin(name);
      row.addValueMeta(v);
    }
 catch (    Exception e) {
      throw new KettleStepException(e);
    }
  }
  if (includeFilename) {
    ValueMeta v=new ValueMeta(filenameField,ValueMeta.TYPE_STRING);
    v.setLength(100,-1);
    v.setOrigin(name);
    row.addValueMeta(v);
  }
  if (includeRowNumber) {
    ValueMeta v=new ValueMeta(rowNumberField,ValueMeta.TYPE_NUMBER);
    v.setLength(7,0);
    v.setOrigin(name);
    row.addValueMeta(v);
  }
}
