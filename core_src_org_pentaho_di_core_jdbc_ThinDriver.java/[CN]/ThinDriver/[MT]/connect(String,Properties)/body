{
  String username=properties.getProperty("user");
  String password=properties.getProperty("password");
  Logger.getLogger(getClass().getName()).log(Level.WARNING,getClass().getName() + " has been deprecated and is scheduled for removal in 6.1. " + "Please use org.pentaho.di.trans.dataservice.jdbc.ThinDriver instead.");
  if (acceptsURL(url)) {
    ThinConnection connection=new ThinConnection(url,username,password);
    connection.testConnection();
    return connection;
  }
 else {
    return null;
  }
}
