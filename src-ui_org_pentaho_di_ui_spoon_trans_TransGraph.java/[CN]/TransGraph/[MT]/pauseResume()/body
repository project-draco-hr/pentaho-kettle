{
  if (running) {
    if (!pausing) {
      pausing=true;
      trans.pauseRunning();
      wPause.setText(RESUME_TEXT);
      enableStartActions(false);
      enablePauseActions(true);
      enableStopActions(true);
    }
 else {
      pausing=false;
      trans.resumeRunning();
      wPause.setText(PAUSE_TEXT);
      enableStartActions(false);
      enablePauseActions(true);
      enableStopActions(true);
    }
  }
}
