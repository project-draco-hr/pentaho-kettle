{
  this.trans=trans;
  if (trans != null) {
    pausing=trans.isPaused();
    initialized=trans.isInitializing();
    running=trans.isRunning();
    halted=trans.isStopped();
    if (running) {
      trans.addTransListener(new TransAdapter(){
        public void transFinished(        Trans trans){
          checkTransEnded();
          checkErrorVisuals();
        }
      }
);
    }
  }
}
