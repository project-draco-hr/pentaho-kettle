{
  boolean enable=wsetTrustStore.getSelection() && LDAPConnection.getProtocolFromCode(wProtocol.getText()) != LDAPConnection.PROTOCOL_LDAP && !wTrustAll.getSelection();
  wlTrustStorePath.setEnabled(enable);
  wTrustStorePath.setEnabled(enable);
  wlTrustStorePassword.setEnabled(enable);
