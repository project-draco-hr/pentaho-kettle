{
  clearStepFieldsCachce();
  RowMetaInterface row=new RowMeta();
  if (stepMeta == null) {
    return null;
  }
  if (log.isDebug())   log.logDebug(toString(),Messages.getString("TransMeta.Log.FromStepALookingAtPreviousStep",stepMeta.getName(),String.valueOf(findNrPrevSteps(stepMeta))));
  for (int i=0; i < findNrPrevSteps(stepMeta); i++) {
    StepMeta prevStepMeta=findPrevStep(stepMeta,i);
    if (monitor != null) {
      monitor.subTask(Messages.getString("TransMeta.Monitor.CheckingStepTask.Title",prevStepMeta.getName()));
    }
    RowMetaInterface add=getStepFields(prevStepMeta,stepMeta,monitor);
    if (log.isDebug())     log.logDebug(toString(),Messages.getString("TransMeta.Log.FoundFieldsToAdd2") + add.toString());
    if (i == 0) {
      row.addRowMeta(add);
    }
 else {
      for (int x=0; x < add.size(); x++) {
        ValueMetaInterface v=add.getValueMeta(x);
        ValueMetaInterface s=row.searchValueMeta(v.getName());
        if (s == null) {
          row.addValueMeta(v);
        }
      }
    }
  }
  return row;
}
