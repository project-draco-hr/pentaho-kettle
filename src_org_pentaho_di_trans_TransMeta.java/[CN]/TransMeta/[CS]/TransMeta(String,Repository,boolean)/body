{
  Document doc=null;
  try {
    doc=XMLHandler.loadXMLFile(KettleVFS.getFileObject(fname));
  }
 catch (  IOException e) {
    throw new KettleXMLException(Messages.getString("TransMeta.Exception.ErrorOpeningOrValidatingTheXMLFile",fname) + " : " + e.toString(),e);
  }
  if (doc != null) {
    clearUndo();
    clear();
    Node transnode=XMLHandler.getSubNode(doc,XML_TAG);
    loadXML(transnode,rep,setInternalVariables);
    setFilename(fname);
  }
 else {
    throw new KettleXMLException(Messages.getString("TransMeta.Exception.ErrorOpeningOrValidatingTheXMLFile",fname));
  }
}
