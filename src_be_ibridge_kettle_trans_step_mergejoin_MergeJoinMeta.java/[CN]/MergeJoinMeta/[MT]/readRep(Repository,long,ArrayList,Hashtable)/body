{
  try {
    int nrKeys1=rep.countNrStepAttributes(id_step,"key1_field");
    int nrKeys2=rep.countNrStepAttributes(id_step,"key2_field");
    allocate(nrKeys1,nrKeys2);
    for (int i=0; i < nrKeys1; i++) {
      keyFields1[i]=rep.getStepAttributeString(id_step,i,"key1_field");
    }
    for (int i=0; i < nrKeys2; i++) {
      keyFields2[i]=rep.getStepAttributeString(id_step,i,"key2_field");
    }
    stepName1=rep.getStepAttributeString(id_step,"step1");
    stepName2=rep.getStepAttributeString(id_step,"step2");
    joinType=rep.getStepAttributeString(id_step,"join_type");
  }
 catch (  Exception e) {
    throw new KettleException(Messages.getString("MergeJoinMeta.Exception.UnexpectedErrorReadingStepInfo"),e);
  }
}
