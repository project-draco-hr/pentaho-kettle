  BaseStepDialog.setTraverseOrder(new Control[]{wName,wDestination,wServer,wUseAuth,wAuthUser,wAuthPass,wReply,wSubject,wAddDate,wIncludeFiles,wTypes,wZipFiles,wZipFilename,wPerson,wPhone,wComment,wOK,wCancel});
