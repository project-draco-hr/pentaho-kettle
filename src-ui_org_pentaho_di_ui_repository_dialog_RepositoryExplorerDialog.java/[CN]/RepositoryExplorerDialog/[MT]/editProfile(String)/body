{
  try {
    ObjectId idProfile=securityProvider.getProfileID(profilename);
    ProfileMeta profinfo=securityProvider.loadProfileMeta(idProfile);
    ProfileDialog pd=new ProfileDialog(shell,SWT.NONE,profinfo);
    String name=pd.open();
    if (name != null) {
      securityProvider.saveProfile(profinfo);
    }
    if (!profilename.equalsIgnoreCase(name))     refreshTree();
  }
 catch (  KettleException e) {
    new ErrorDialog(shell,BaseMessages.getString(PKG,"RepositoryExplorerDialog.Profile.Edit.UnexpectedError.Title"),BaseMessages.getString(PKG,"RepositoryExplorerDialog.Profile.Edit.UnexpectedError.Message"),e);
  }
}
