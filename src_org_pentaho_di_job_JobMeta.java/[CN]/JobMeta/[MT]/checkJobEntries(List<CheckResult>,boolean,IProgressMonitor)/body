{
  remarks.clear();
  if (monitor != null)   monitor.beginTask(Messages.getString("JobMeta.Monitor.VerifyingThisJobEntryTask.Title"),jobcopies.size() + 2);
  boolean stop_checking=false;
  for (int i=0; i < jobcopies.size() && !stop_checking; i++) {
    JobEntryCopy copy=jobcopies.get(i);
    if ((!only_selected) || (only_selected && copy.isSelected())) {
      JobEntryInterface entry=copy.getEntry();
      if (entry != null) {
        if (monitor != null)         monitor.subTask(Messages.getString("JobMeta.Monitor.VerifyingJobEntry.Title",entry.getName()));
        entry.check(remarks,this);
        if (monitor != null) {
          monitor.worked(1);
          if (monitor.isCanceled()) {
            stop_checking=true;
          }
        }
      }
    }
    if (monitor != null) {
      monitor.worked(1);
    }
  }
  if (monitor != null) {
    monitor.done();
  }
}
