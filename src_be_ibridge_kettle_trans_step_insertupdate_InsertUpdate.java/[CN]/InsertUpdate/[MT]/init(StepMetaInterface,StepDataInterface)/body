{
  meta=(InsertUpdateMeta)smi;
  data=(InsertUpdateData)sdi;
  if (super.init(smi,sdi)) {
    try {
      data.db=new Database(meta.getDatabase());
      if (getTransMeta().isUsingUniqueConnections()) {
        data.db.connect(getTrans().getThreadName(),getPartitionID());
      }
 else {
        data.db.connect(getPartitionID());
      }
      data.db.setCommit(meta.getCommitSize());
      return true;
    }
 catch (    KettleException ke) {
      logError(Messages.getString("InsertUpdate.Log.ErrorOccurredDuringStepInitialize") + ke.getMessage());
    }
  }
  return false;
}
