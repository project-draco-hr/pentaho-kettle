{
  TreeItem ti[]=tMain.getSelection();
  if (ti.length >= 1) {
    String name=ti[0].getText();
    TreeItem parent=ti[0].getParentItem();
    if (parent == null) {
      if (name.equalsIgnoreCase(STRING_CONNECTIONS)) {
        newConnection();
      }
 else {
        newChefGraphEntry(name);
      }
    }
 else {
    }
  }
}
