{
  String fname=jobMeta.getFilename();
  if (shell.isDisposed())   return;
  if (rep != null) {
    String repository="[" + getRepositoryName() + "]";
    String transname=jobMeta.getName();
    if (transname == null)     transname=Messages.getString("Chef.ShellText.NoJobName");
    shell.setText(APPL_TITLE + " - " + repository+ "   "+ transname+ (jobMeta.hasChanged() ? Messages.getString("Chef.ShellText.Changed") : ""));
  }
 else {
    String repository=Messages.getString("Chef.ShellText.NoRepository");
    if (fname != null) {
      shell.setText(APPL_TITLE + " - " + repository+ Messages.getString("Chef.ShellText.File")+ fname+ (jobMeta.hasChanged() ? Messages.getString("Chef.ShellText.Changed2") : ""));
    }
 else {
      shell.setText(APPL_TITLE + " - " + repository+ "   "+ (jobMeta.hasChanged() ? Messages.getString("Chef.ShellText.Changed3") : ""));
    }
  }
}
