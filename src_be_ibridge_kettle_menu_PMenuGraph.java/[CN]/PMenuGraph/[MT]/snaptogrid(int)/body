{
  for (int i=0; i < schema.nrTables(); i++) {
    TableMeta si=schema.getTable(i);
    if (si.isSelected()) {
      Point p=si.getLocation();
      int dx=p.x % size;
      int dy=p.y % size;
      if (dx > size / 2)       p.x+=size - dx;
 else       p.x-=dx;
      if (dy > size / 2)       p.y+=size - dy;
 else       p.y-=dy;
    }
  }
  redraw();
}
