{
  transGraph.getDisplay().asyncExec(new Runnable(){
    public void run(){
      if (perfComposite != null && !perfComposite.isDisposed() && canvas != null && !canvas.isDisposed() && transPerfTab != null && !transPerfTab.isDisposed()) {
        if (transPerfTab.isShowing()) {
          updateCanvas();
        }
      }
    }
  }
);
}
