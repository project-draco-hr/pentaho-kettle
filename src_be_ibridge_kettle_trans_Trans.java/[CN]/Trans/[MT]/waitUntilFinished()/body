{
  int ended=0;
  int errors=0;
  try {
    while (ended != steps.size() && errors == 0) {
      ended=getEnded();
      errors=getErrors();
      Thread.sleep(100);
    }
    if (errors == 0) {
      log.logMinimal(toString(),Messages.getString("Trans.Log.TransformationEnded"));
    }
 else {
      log.logMinimal(toString(),Messages.getString("Trans.Log.TransformationDetectedErrors") + errors + " steps with errors!");
      log.logMinimal(toString(),Messages.getString("Trans.Log.TransformationIsKillingTheOtherSteps"));
      killAll();
    }
  }
 catch (  Exception e) {
    log.logError(toString(),Messages.getString("Trans.Log.TransformationError") + e.toString());
    log.logError(toString(),Const.getStackTracker(e));
  }
}
