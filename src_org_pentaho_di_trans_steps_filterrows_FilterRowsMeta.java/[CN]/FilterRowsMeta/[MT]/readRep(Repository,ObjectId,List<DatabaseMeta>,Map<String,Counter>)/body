{
  try {
    allocate();
    StreamInterface[] targetStreams=getStepIOMeta().getTargetStreams();
    targetStreams[0].setStepname(rep.getStepAttributeString(id_step,"send_true_to"));
    targetStreams[1].setStepname(rep.getStepAttributeString(id_step,"send_false_to"));
    condition=rep.loadConditionFromStepAttribute(id_step,"id_condition");
  }
 catch (  Exception e) {
    throw new KettleException(BaseMessages.getString(PKG,"FilterRowsMeta.Exception.UnexpectedErrorInReadingStepInfoFromRepository"),e);
  }
}
