{
  try {
    if (condition != null) {
      rep.saveConditionStepAttribute(id_transformation,id_step,"id_condition",condition);
      rep.insertTransStepCondition(id_transformation,id_step,condition.getObjectId());
      rep.saveStepAttribute(id_transformation,id_step,"send_true_to",getSendTrueStepname());
      rep.saveStepAttribute(id_transformation,id_step,"send_false_to",getSendFalseStepname());
    }
  }
 catch (  Exception e) {
    throw new KettleException(BaseMessages.getString(PKG,"FilterRowsMeta.Exception.UnableToSaveStepInfoToRepository") + id_step,e);
  }
}
