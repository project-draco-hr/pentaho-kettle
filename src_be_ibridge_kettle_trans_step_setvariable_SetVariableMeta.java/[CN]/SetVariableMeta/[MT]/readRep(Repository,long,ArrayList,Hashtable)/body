{
  try {
    int nrfields=rep.countNrStepAttributes(id_step,"source_value");
    allocate(nrfields);
    for (int i=0; i < nrfields; i++) {
      fieldName[i]=rep.getStepAttributeString(id_step,i,"field_name");
      variableName[i]=rep.getStepAttributeString(id_step,i,"variable_name");
    }
  }
 catch (  Exception e) {
    throw new KettleException(Messages.getString("SetVariableMeta.RuntimeError.UnableToReadRepository.SETVARIABLE0005"),e);
  }
}
