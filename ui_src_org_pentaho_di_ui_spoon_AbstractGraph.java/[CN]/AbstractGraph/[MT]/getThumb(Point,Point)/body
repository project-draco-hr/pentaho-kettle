{
  Point resizedMax=magnifyPoint(transMax);
  Point thumb=new Point(0,0);
  if (resizedMax.x <= area.x) {
    thumb.x=100;
  }
 else {
    thumb.x=100 * area.x / resizedMax.x;
  }
  if (resizedMax.y <= area.y) {
    thumb.y=100;
  }
 else {
    thumb.y=100 * area.y / resizedMax.y;
  }
  return thumb;
}
