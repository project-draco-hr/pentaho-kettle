{
  TransAction prev=jobMeta.viewThisUndo();
  TransAction next=jobMeta.viewNextUndo();
  if (prev != null) {
    miEditUndo.setEnabled(true);
    miEditUndo.setText(Messages.getString("Chef.Menu.Edit.Undo") + prev.toString() + " \tCTRL-Z");
  }
 else {
    miEditUndo.setEnabled(false);
    miEditUndo.setText(Messages.getString("Chef.Menu.Edit.UndoNotAvailable"));
  }
  if (next != null) {
    miEditRedo.setEnabled(true);
    miEditRedo.setText(Messages.getString("Chef.Menu.Edit.Redo") + next.toString() + " \tCTRL-Y");
  }
 else {
    miEditRedo.setEnabled(false);
    miEditRedo.setText(Messages.getString("Chef.Menu.Edit.RedoNotAvailable"));
  }
}
