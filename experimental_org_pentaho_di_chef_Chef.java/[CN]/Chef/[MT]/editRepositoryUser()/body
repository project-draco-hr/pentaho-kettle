{
  if (rep != null) {
    UserInfo userinfo=rep.getUserInfo();
    UserDialog ud=new UserDialog(shell,SWT.NONE,rep,userinfo);
    UserInfo ui=ud.open();
    if (!userinfo.isReadonly()) {
      if (ui != null) {
        try {
          ui.saveRep(rep);
        }
 catch (        KettleException e) {
          MessageBox mb=new MessageBox(shell,SWT.ICON_WARNING | SWT.OK);
          mb.setMessage(Messages.getString("Chef.Dialog.UnableToChangeUser.Message") + Const.CR + e.getMessage());
          mb.setText(Messages.getString("Chef.Dialog.UnableToChangeUser.Title"));
          mb.open();
        }
      }
    }
 else {
      MessageBox mb=new MessageBox(shell,SWT.ICON_WARNING | SWT.OK);
      mb.setMessage(Messages.getString("Chef.Dialog.NotAllowedToChangeUser.Message"));
      mb.setText(Messages.getString("Chef.Dialog.NotAllowedToChangeUser.Title"));
      mb.open();
    }
  }
}
