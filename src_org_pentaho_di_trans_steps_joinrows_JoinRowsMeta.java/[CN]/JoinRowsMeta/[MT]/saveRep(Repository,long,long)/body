{
  try {
    rep.saveStepAttribute(id_transformation,id_step,"directory",directory);
    rep.saveStepAttribute(id_transformation,id_step,"prefix",prefix);
    rep.saveStepAttribute(id_transformation,id_step,"cache_size",cacheSize);
    rep.saveStepAttribute(id_transformation,id_step,"main",getLookupStepname());
    if (condition != null) {
      condition.saveRep(rep);
      rep.saveStepAttribute(id_transformation,id_step,"id_condition",condition.getID());
      rep.insertTransStepCondition(id_transformation,id_step,condition.getID());
    }
  }
 catch (  Exception e) {
    throw new KettleException(BaseMessages.getString(PKG,"JoinRowsMeta.Exception.UnableToSaveStepInfoToRepository") + id_step,e);
  }
}
