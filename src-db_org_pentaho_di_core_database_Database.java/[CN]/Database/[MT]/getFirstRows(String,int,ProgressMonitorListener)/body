{
  String sql="SELECT";
  if (databaseMeta.getDatabaseType() == DatabaseMeta.TYPE_DATABASE_NEOVIEW) {
    sql+=" [FIRST " + limit + "]";
  }
 else   if (databaseMeta.getDatabaseType() == DatabaseMeta.TYPE_DATABASE_SYBASEIQ) {
    sql+=" TOP " + limit + " ";
  }
  sql+=" * FROM " + table_name;
  if (limit > 0) {
    sql+=databaseMeta.getLimitClause(limit);
  }
  return getRows(sql,limit,monitor);
}
