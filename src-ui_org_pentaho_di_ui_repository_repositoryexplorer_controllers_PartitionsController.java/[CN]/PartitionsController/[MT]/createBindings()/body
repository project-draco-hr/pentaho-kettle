{
  try {
    partitionsTable=(XulTree)document.getElementById("partitions-table");
    bf.createBinding(this,"partitionList",partitionsTable,"elements");
    bf.setBindingType(Binding.Type.ONE_WAY);
    bf.createBinding(partitionsTable,"selectedItems",this,"enableButtons",new BindingConvertor<List<UIPartition>,Boolean>(){
      @Override public Boolean sourceToTarget(      List<UIPartition> partitions){
        if (partitions != null && partitions.size() > 0) {
          return true;
        }
        return false;
      }
      @Override public List<UIPartition> targetToSource(      Boolean enabled){
        return null;
      }
    }
);
  }
 catch (  Exception e) {
    throw new RuntimeException(e);
  }
  refreshPartitions();
}
