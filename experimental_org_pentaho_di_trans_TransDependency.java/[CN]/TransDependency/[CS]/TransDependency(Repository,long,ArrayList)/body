{
  try {
    setID(id_dependency);
    RowMetaAndData r=rep.getTransDependency(id_dependency);
    if (r != null) {
      long id_connection=r.getInteger("ID_DATABASE",0);
      db=DatabaseMeta.findDatabase(databases,id_connection);
      tablename=r.getString("TABLE_NAME",null);
      fieldname=r.getString("FIELD_NAME",null);
    }
  }
 catch (  KettleException dbe) {
    throw new KettleException(Messages.getString("TransDependency.Exception.UnableToLoadTransformationDependency") + id_dependency,dbe);
  }
}
