{
  try {
    if (rep != null && clusterSchema.getId() > 0) {
      rep.delClusterSchema(clusterSchema.getId());
    }
    int idx=transMeta.getClusterSchemas().indexOf(clusterSchema);
    transMeta.getClusterSchemas().remove(idx);
    refreshTree();
  }
 catch (  KettleException e) {
    new ErrorDialog(shell,Messages.getString("Spoon.Dialog.ErrorDeletingPartitionSchema.Title"),Messages.getString("Spoon.Dialog.ErrorDeletingPartitionSchema.Message"),e);
  }
}
