{
  if (!selectRep(splash)) {
    splash.dispose();
    quitFile();
  }
 else {
    handleStartOptions();
    open();
    if (splash != null) {
      splash.dispose();
    }
    try {
      while (!isDisposed()) {
        if (!readAndDispatch())         sleep();
      }
    }
 catch (    Throwable e) {
      log.logError(APP_NAME,Messages.getString("Spoon.Log.UnexpectedErrorOccurred") + Const.CR + e.getMessage());
      log.logError(APP_NAME,Const.getStackTracker(e));
    }
    dispose();
    log.logBasic(APP_NAME,APP_NAME + " " + Messages.getString("Spoon.Log.AppHasEnded"));
    log.close();
  }
}
