{
  BufferedReader reader=null;
  try {
    if (encoding == null)     reader=new BufferedReader(new InputStreamReader(new FileInputStream(file)));
 else     reader=new BufferedReader(new InputStreamReader(new FileInputStream(file),encoding));
    String line=null;
    while ((line=reader.readLine()) != null) {
      if (line.length() > 0)       lineNumbers.add(Long.valueOf(line));
    }
  }
 catch (  Exception e) {
    throw new KettleException("Could not read line number file " + file.getAbsolutePath(),e);
  }
 finally {
    if (reader != null)     try {
      reader.close();
    }
 catch (    IOException e) {
      LogWriter.getInstance().logBasic("TextFilePlayLineNumber","Could not close line number file " + file.getAbsolutePath());
    }
  }
}
