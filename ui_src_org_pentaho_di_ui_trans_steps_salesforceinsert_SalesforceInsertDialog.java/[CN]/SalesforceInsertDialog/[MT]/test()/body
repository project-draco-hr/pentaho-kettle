{
  SalesforceConnection connection=null;
  try {
    if (!checkUser()) {
      return;
    }
    connection=getConnection();
    MessageBox mb=new MessageBox(shell,SWT.OK | SWT.ICON_INFORMATION);
    mb.setMessage(BaseMessages.getString(PKG,"SalesforceInsertDialog.Connected.OK",wUserName.getText()) + Const.CR);
    mb.setText(BaseMessages.getString(PKG,"SalesforceInsertDialog.Connected.Title.Ok"));
    mb.open();
  }
 catch (  Exception e) {
    new ErrorDialog(shell,BaseMessages.getString(PKG,"SalesforceInsertDialog.Connected.Title.Error"),BaseMessages.getString(PKG,"SalesforceInsertDialog.Connected.NOK",wUserName.getText()),new Exception(e.getMessage()));
  }
 finally {
    if (connection != null) {
      try {
        connection.close();
      }
 catch (      Exception e) {
      }
    }
  }
}
