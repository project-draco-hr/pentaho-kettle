{
  StringBuffer report=new StringBuffer();
  SAPConnection sc=null;
  try {
    sc=create();
    sc.open(databaseMeta);
    report.append("Connecting to SAP R/3 server [").append(databaseMeta.getName()).append("] succeeded without a problem.").append(Const.CR);
  }
 catch (  SAPException e) {
    report.append("Unable to connect to the SAP R/3 server: ").append(e.getMessage()).append(Const.CR);
    report.append(Const.getStackTracker(e));
  }
 finally {
    if (sc != null)     sc.close();
  }
  return report.toString();
}
