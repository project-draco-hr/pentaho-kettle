{
  int nrCols=tree.getColumnCount();
  int[] max=new int[nrCols];
  Image image=new Image(tree.getDisplay(),10,10);
  GC gc=new GC(image);
  getMaxWidths(tree.getItems(),max,gc);
  gc.dispose();
  image.dispose();
  for (int i=0; i < max.length; i++) {
    tree.getColumn(i).setWidth(max[i] + 20);
  }
}
