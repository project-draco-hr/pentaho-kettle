{
  try {
    slavesTable=(XulTree)document.getElementById("slaves-table");
    bf.setBindingType(Binding.Type.ONE_WAY);
    bf.createBinding(slaveList,"children",slavesTable,"elements");
    bf.createBinding(slavesTable,"selectedItems",this,"enableButtons",new BindingConvertor<List<UISlave>,Boolean>(){
      @Override public Boolean sourceToTarget(      List<UISlave> slaves){
        if (slaves != null && slaves.size() > 0) {
          return true;
        }
        return false;
      }
      @Override public List<UISlave> targetToSource(      Boolean enabled){
        return null;
      }
    }
);
  }
 catch (  Exception e) {
    throw new RuntimeException(e);
  }
  refreshSlaves();
}
