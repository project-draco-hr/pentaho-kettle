{
  meta=(FilesToResultMeta)smi;
  data=(FilesToResultData)sdi;
  Row r=getRow();
  if (r == null) {
    getTransMeta().getResultFiles().addAll(data.filenames);
    setOutputDone();
    return false;
  }
  if (first) {
    first=false;
    data.filenameIndex=r.searchValueIndex(meta.getFilenameField());
    if (data.filenameIndex < 0) {
      logError(Messages.getString("FilesToResult.Log.CouldNotFindField",meta.getFilenameField()));
      setErrors(1);
      stopAll();
      return false;
    }
  }
  Value filenameValue=r.getValue(data.filenameIndex);
  String filename=filenameValue.getString();
  ResultFile resultFile=new ResultFile(meta.getFileType(),new File(filename),getTrans().getName(),getStepname());
  data.filenames.add(resultFile);
  putRow(r);
  if ((linesRead > 0) && (linesRead % Const.ROWS_UPDATE) == 0)   logBasic(Messages.getString("FilesToResult.Log.LineNumber") + linesRead);
  return true;
}
