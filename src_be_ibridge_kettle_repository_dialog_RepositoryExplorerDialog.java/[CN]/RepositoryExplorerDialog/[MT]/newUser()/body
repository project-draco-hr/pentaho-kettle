{
  try {
    UserDialog ud=new UserDialog(shell,SWT.NONE,log,props,rep,new UserInfo());
    UserInfo ui=ud.open();
    if (ui != null) {
      long uid=rep.getUserID(ui.getLogin());
      if (uid <= 0) {
        ui.saveRep(rep);
      }
 else {
        MessageBox mb=new MessageBox(shell,SWT.ICON_ERROR | SWT.OK);
        mb.setMessage(Messages.getString("RepositoryExplorerDialog.Dialog.User.New.AlreadyExists.Message"));
        mb.setText(Messages.getString("RepositoryExplorerDialog.Dialog.User.New.AlreadyExists.Title"));
        mb.open();
      }
      refreshTree();
    }
  }
 catch (  KettleException e) {
    new ErrorDialog(shell,props,Messages.getString("RepositoryExplorerDialog.Dialog.User.New.UnexpectedError.Title"),Messages.getString("RepositoryExplorerDialog.Dialog.User.New.UnexpectedError.Message"),e);
  }
}
