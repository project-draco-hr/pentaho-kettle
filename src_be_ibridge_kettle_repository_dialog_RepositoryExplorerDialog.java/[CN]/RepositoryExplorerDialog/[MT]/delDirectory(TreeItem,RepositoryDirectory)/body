{
  if (repdir.delFromRep(rep)) {
    refreshTree();
  }
 else {
    MessageBox mb=new MessageBox(shell,SWT.ICON_ERROR | SWT.OK);
    mb.setMessage(Messages.getString("RepositoryExplorerDialog.Dialog.Directory.Delete.ErrorRemoving.Message1") + Const.CR + Messages.getString("RepositoryExplorerDialog.Dialog.Directory.Delete.ErrorRemoving.Message2"));
    mb.setText(Messages.getString("RepositoryExplorerDialog.Dialog.Directory.Delete.ErrorRemoving.Title"));
    mb.open();
  }
}
