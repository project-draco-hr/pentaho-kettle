{
  try {
    long isUser=rep.getUserID(login);
    if (isUser > 0) {
      rep.delUser(isUser);
    }
  }
 catch (  KettleException e) {
    new ErrorDialog(shell,Messages.getString("RepositoryExplorerDialog.Dialog.User.Delete.UnexpectedError.Title"),Messages.getString("RepositoryExplorerDialog.Dialog.User.Delete.UnexpectedError.Message"),e);
  }
  refreshTree();
}
