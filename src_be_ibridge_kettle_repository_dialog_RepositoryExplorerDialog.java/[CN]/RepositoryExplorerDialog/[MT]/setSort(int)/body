{
  if (sortColumn == i) {
    ascending=!ascending;
  }
 else {
    sortColumn=i;
    ascending=true;
  }
  if (sortColumn >= 0 && sortColumn < 4) {
    TreeColumn column=wTree.getColumn(sortColumn);
    wTree.setSortColumn(column);
    wTree.setSortDirection(ascending ? SWT.UP : SWT.DOWN);
  }
  refreshTree();
}
