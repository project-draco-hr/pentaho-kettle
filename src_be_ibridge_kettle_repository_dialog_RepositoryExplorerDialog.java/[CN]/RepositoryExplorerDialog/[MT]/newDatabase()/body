{
  try {
    DatabaseMeta dbinfo=new DatabaseMeta();
    DatabaseDialog dd=new DatabaseDialog(shell,SWT.NONE,log,dbinfo,props);
    String name=dd.open();
    if (name != null) {
      long idDatabase=rep.getDatabaseID(name);
      if (idDatabase <= 0) {
        dbinfo.saveRep(rep);
      }
 else {
        MessageBox mb=new MessageBox(shell,SWT.ICON_ERROR | SWT.OK);
        mb.setMessage(Messages.getString("RepositoryExplorerDialog.Dialog.Connection.Create.AlreadyExists.Message"));
        mb.setText(Messages.getString("RepositoryExplorerDialog.Dialog.Connection.Create.AlreadyExists.Title"));
        mb.open();
      }
      refreshTree();
    }
  }
 catch (  KettleException e) {
    new ErrorDialog(shell,props,Messages.getString("RepositoryExplorerDialog.Dialog.Connection.Create.UnexpectedError.Title"),Messages.getString("RepositoryExplorerDialog.Dialog.Connection.Create.UnexpectedError.Message"),e);
  }
}
