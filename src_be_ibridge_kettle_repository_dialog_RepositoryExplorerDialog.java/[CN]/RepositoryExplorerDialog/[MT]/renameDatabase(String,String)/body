{
  boolean retval=false;
  try {
    if (!name.equals(newname)) {
      long id=rep.getDatabaseID(name);
      if (id > 0) {
        rep.renameDatabase(id,newname);
        retval=true;
      }
 else {
        MessageBox mb=new MessageBox(shell,SWT.ICON_ERROR | SWT.OK);
        mb.setMessage(Messages.getString("RepositoryExplorerDialog.Dialog.Connection.Rename.ErrorFinding.Message1") + name + "]"+ Const.CR+ Messages.getString("RepositoryExplorerDialog.Dialog.Connection.Rename.ErrorFinding.Message2"));
        mb.setText(Messages.getString("RepositoryExplorerDialog.Dialog.Connection.Rename.ErrorFinding.Title"));
        mb.open();
      }
    }
  }
 catch (  KettleException e) {
    new ErrorDialog(shell,props,Messages.getString("RepositoryExplorerDialog.Dialog.Connection.Rename.UnexpectedError.Title"),Messages.getString("RepositoryExplorerDialog.Dialog.Connection.Rename.UnexpectedError.Message"),e);
  }
  return retval;
}
