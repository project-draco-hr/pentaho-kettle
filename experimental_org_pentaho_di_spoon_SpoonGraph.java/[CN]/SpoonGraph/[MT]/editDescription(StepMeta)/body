{
  String title=Messages.getString("SpoonGraph.Dialog.StepDescription.Title");
  String message=Messages.getString("SpoonGraph.Dialog.StepDescription.Message");
  EnterTextDialog dd=new EnterTextDialog(shell,title,message,stepMeta.getDescription());
  String d=dd.open();
  if (d != null)   stepMeta.setDescription(d);
}
