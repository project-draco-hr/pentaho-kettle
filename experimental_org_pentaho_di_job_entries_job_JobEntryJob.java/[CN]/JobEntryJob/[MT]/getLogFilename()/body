{
  String retval="";
  if (setLogfile) {
    retval+=logfile;
    Calendar cal=Calendar.getInstance();
    if (addDate) {
      SimpleDateFormat sdf=new SimpleDateFormat("yyyyMMdd");
      retval+="_" + sdf.format(cal.getTime());
    }
    if (addTime) {
      SimpleDateFormat sdf=new SimpleDateFormat("HHmmss");
      retval+="_" + sdf.format(cal.getTime());
    }
    if (logext != null && logext.length() > 0) {
      retval+="." + logext;
    }
  }
  return retval;
}
