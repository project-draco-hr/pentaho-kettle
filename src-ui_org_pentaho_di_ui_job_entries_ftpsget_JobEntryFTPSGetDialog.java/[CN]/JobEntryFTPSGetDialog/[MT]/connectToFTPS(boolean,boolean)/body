{
  boolean retval=true;
  try {
    if (connection == null) {
      String realServername=jobMeta.environmentSubstitute(wServerName.getText());
      int port=Const.toInt(jobMeta.environmentSubstitute(wPort.getText()),0);
      String realUsername=jobMeta.environmentSubstitute(wUserName.getText());
      String realPassword=jobMeta.environmentSubstitute(wPassword.getText());
      connection=new FTPSConnection(realServername,port,realUsername,realPassword);
      connection.connect();
    }
    String realFTPSDirectory=null;
    if (!Const.isEmpty(wFTPSDirectory.getText()))     realFTPSDirectory=jobMeta.environmentSubstitute(wFTPSDirectory.getText());
    if (checkfolder) {
      if (!Const.isEmpty(realFTPSDirectory)) {
        retval=connection.isDirectoryExists(realFTPSDirectory);
      }
    }
    if (checkmoveToFolder) {
      if (!Const.isEmpty(wMoveToDirectory.getText())) {
        String realMoveDirectory=jobMeta.environmentSubstitute(wMoveToDirectory.getText());
        retval=connection.isDirectoryExists(realMoveDirectory);
      }
    }
  }
 catch (  Exception e) {
    retval=false;
    MessageBox mb=new MessageBox(shell,SWT.OK | SWT.ICON_ERROR);
    mb.setMessage(BaseMessages.getString(PKG,"JobFTPS.ErrorConnect.NOK",e.getMessage()) + Const.CR);
    mb.setText(BaseMessages.getString(PKG,"JobFTPS.ErrorConnect.Title.Bad"));
    mb.open();
  }
  return retval;
}
