{
  int maxprec=4;
  double maxdiff=0.00005;
  double diff=Math.abs(Math.floor(d) - d);
  if (diff < maxdiff)   return 0;
  for (int i=1; i < maxprec; i++) {
    double factor=Math.pow(10.0,(double)i);
    diff=Math.abs(Math.floor(d * factor) - (d * factor));
    if (diff < maxdiff) {
      return i;
    }
    factor*=10;
  }
  return -1;
}
