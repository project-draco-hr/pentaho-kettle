{
  try {
    pluginBaseDir=findPluginBaseDir();
    if (!StringUtils.isEmpty(pluginBaseDir)) {
      props=new Properties();
      props.load(new FileInputStream(new File(pluginBaseDir + "/" + Constants.MONITORING_PROPERTIES_FILE)));
      setLogLevelMessageTransportation(LogLevel.valueOf(getProperty(Constants.LOG_MESSSAGE_TRANSPORTATION_LEVEL_KEY,Constants.DEFAULT_LOG_MESSSAGE_TRANSPORTATION_LEVEL)));
      setMaxLogEntriesTransportation(Integer.valueOf(getProperty(Constants.MAX_LOG_ENTRIES_TRANSPORTATION_KEY,Constants.DEFAULT_LOG_ENTRIES_TRANSPORTATION)));
    }
  }
 catch (  Exception e) {
    throw new KettleException(e);
  }
}
