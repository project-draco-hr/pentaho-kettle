{
  LogWriter log=LogWriter.getInstance();
  try {
    log.logDebug(toString(),BaseMessages.getString(PKG,"StepMeta.Log.SaveNewStep"));
    stepMeta.setID(insertStep(id_transformation,stepMeta.getName(),stepMeta.getDescription(),stepMeta.getStepID(),stepMeta.isDistributes(),stepMeta.getCopies(),stepMeta.getLocation() == null ? -1 : stepMeta.getLocation().x,stepMeta.getLocation() == null ? -1 : stepMeta.getLocation().y,stepMeta.isDrawn()));
    repository.stepDelegate.saveStepPartitioningMeta(stepMeta.getStepPartitioningMeta(),id_transformation,stepMeta.getID());
    log.logDebug(toString(),BaseMessages.getString(PKG,"StepMeta.Log.SaveStepDetails"));
    stepMeta.getStepMetaInterface().saveRep(repository,id_transformation,stepMeta.getID());
    repository.saveStepAttribute(id_transformation,stepMeta.getID(),"cluster_schema",stepMeta.getClusterSchema() == null ? "" : stepMeta.getClusterSchema().getName());
  }
 catch (  KettleException e) {
    throw new KettleException(BaseMessages.getString(PKG,"StepMeta.Exception.UnableToSaveStepInfo",String.valueOf(id_transformation)),e);
  }
}
