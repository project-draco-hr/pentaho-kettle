{
  if (sortColumn == i) {
    ascending=!ascending;
  }
 else {
    sortColumn=i;
    ascending=true;
  }
  if (sortColumn > 0 && sortColumn < 5) {
    TreeColumn column=wTree.getColumn(sortColumn - 1);
    wTree.setSortColumn(column);
    wTree.setSortDirection(ascending ? SWT.UP : SWT.DOWN);
  }
  refreshTree();
}
