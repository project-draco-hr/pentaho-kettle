{
  localVariables.createKettleVariables(Thread.currentThread(),parentThread,true);
  try {
    if (combi.step.init(combi.meta,combi.data)) {
      combi.data.setStatus(StepDataInterface.STATUS_IDLE);
      ok=true;
    }
 else {
      combi.step.setErrors(1);
      log.logError(toString(),Messages.getString("Trans.Log.ErrorInitializingStep",combi.step.getStepname()));
    }
  }
 catch (  Throwable e) {
    log.logError(toString(),Messages.getString("Trans.Log.ErrorInitializingStep",combi.step.getStepname()));
    log.logError(toString(),Const.getStackTracker(e));
  }
  localVariables.removeKettleVariables(Thread.currentThread());
  finished=true;
}
