{
  TreeItem ti[]=wTree.getSelection();
  if (ti.length == 1) {
    TreeItem parent=ti[0].getParentItem();
    String fullpath=ti[0].getText();
    while (parent != null) {
      fullpath=parent.getText() + MailConnectionMeta.FOLDER_SEPARATOR + fullpath;
      parent=parent.getParentItem();
    }
    selection=fullpath;
    dispose();
  }
}
