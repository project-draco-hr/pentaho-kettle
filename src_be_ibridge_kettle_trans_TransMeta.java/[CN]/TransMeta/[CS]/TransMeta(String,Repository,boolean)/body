{
  String xml=null;
  try {
    xml=KettleVFS.getFileContent(fname);
  }
 catch (  IOException e) {
    throw new KettleXMLException(Messages.getString("TransMeta.Exception.ErrorOpeningOrValidatingTheXMLFile",fname));
  }
  Document doc=XMLHandler.loadXMLString(xml);
  if (doc != null) {
    clearUndo();
    clear();
    Node transnode=XMLHandler.getSubNode(doc,"transformation");
    loadXML(transnode,rep,setInternalVariables);
    setFilename(fname);
  }
 else {
    throw new KettleXMLException(Messages.getString("TransMeta.Exception.ErrorOpeningOrValidatingTheXMLFile",fname));
  }
}
