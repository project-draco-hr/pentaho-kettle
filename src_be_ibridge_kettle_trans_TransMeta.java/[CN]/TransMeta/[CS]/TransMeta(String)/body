{
  Document doc=XMLHandler.loadXMLFile(fname);
  if (doc != null) {
    clearUndo();
    clear();
    Node transnode=XMLHandler.getSubNode(doc,"transformation");
    loadXML(transnode);
    setFilename(fname);
  }
 else {
    throw new KettleXMLException("Error opening/validating the XML file!");
  }
}
