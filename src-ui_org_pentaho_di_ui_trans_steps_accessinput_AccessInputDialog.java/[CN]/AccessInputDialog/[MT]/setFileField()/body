{
  try {
    String field=wFilenameField.getText();
    wFilenameField.removeAll();
    RowMetaInterface r=transMeta.getPrevStepFields(stepname);
    if (r != null) {
      r.getFieldNames();
      for (int i=0; i < r.getFieldNames().length; i++) {
        wFilenameField.add(r.getFieldNames()[i]);
      }
    }
    if (field != null)     wFilenameField.setText(field);
  }
 catch (  KettleException ke) {
    new ErrorDialog(shell,Messages.getString("AccessInputDialog.FailedToGetFields.DialogTitle"),Messages.getString("AccessInputDialog.FailedToGetFields.DialogMessage"),ke);
  }
}
