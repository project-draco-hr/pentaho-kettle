{
  meta=(UpdateMeta)smi;
  data=(UpdateData)sdi;
  if (super.init(smi,sdi)) {
    data.dblup=new Database(meta.getDatabase());
    data.dbupd=new Database(meta.getDatabase());
    try {
      data.dblup.connect();
      data.dbupd.connect();
      logBasic(Messages.getString("Update.Log.ConnectedToDB"));
      data.dbupd.setCommit(meta.getCommitSize());
      return true;
    }
 catch (    KettleException ke) {
      logError(Messages.getString("Update.Log.ErrorOccurred") + ke.getMessage());
      setErrors(1);
      stopAll();
    }
  }
  return false;
}
