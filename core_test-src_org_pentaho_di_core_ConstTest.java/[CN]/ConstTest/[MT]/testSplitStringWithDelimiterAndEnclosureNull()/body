{
  String[] result=Const.splitString("Hello, world",",",null);
  assertNotNull(result);
  assertEquals(2,result.length);
  assertEquals("Hello",result[0]);
  assertEquals(" world",result[1]);
  result=Const.splitString("Hello, world",",",null,true);
  assertNotNull(result);
  assertEquals(2,result.length);
  assertEquals("Hello",result[0]);
  assertEquals(" world",result[1]);
}
