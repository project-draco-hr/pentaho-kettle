{
  StringBuffer sb=new StringBuffer();
  for (int i=0, n=s.length(); i < n; i++) {
    char c=s.charAt(i);
    if (quotable.indexOf(c) != -1)     sb.append('\\').append(c);
 else     if (canAppearUnquotedInLabel(c))     sb.append(c);
 else     sb.append("\\\\0u").append(Integer.toHexString((int)c));
  }
  return sb.toString();
}
