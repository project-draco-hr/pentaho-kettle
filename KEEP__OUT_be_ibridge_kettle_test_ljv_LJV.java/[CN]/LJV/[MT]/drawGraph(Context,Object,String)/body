{
  try {
    File dotfile=ctx.keepDotFile == null ? File.createTempFile("LJV","dot") : new File(ctx.keepDotFile);
    PrintWriter out=new PrintWriter(new FileWriter(dotfile));
    try {
      generateDOT(ctx,obj,out);
      out.close();
      Runtime.getRuntime().exec(new String[]{DOT_COMMAND,"-T" + ctx.outputFormat,dotfile.toString(),"-o",file}).waitFor();
    }
 catch (    InterruptedException e) {
    }
 finally {
      if (ctx.keepDotFile == null)       dotfile.delete();
    }
  }
 catch (  IOException e) {
    System.err.println(e);
  }
}
