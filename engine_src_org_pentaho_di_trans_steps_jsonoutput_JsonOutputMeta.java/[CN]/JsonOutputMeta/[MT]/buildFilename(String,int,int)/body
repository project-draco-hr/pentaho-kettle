{
  SimpleDateFormat daf=new SimpleDateFormat();
  String retval=fileName;
  Date now=new Date();
  if (dateInFilename) {
    daf.applyPattern("yyyMMdd");
    String d=daf.format(now);
    retval+="_" + d;
  }
  if (timeInFilename) {
    daf.applyPattern("HHmmss.SSS");
    String t=daf.format(now);
    retval+="_" + t;
  }
  if (stepNrInFilename) {
    retval+="_" + stepnr;
  }
  if (extension != null && extension.length() != 0) {
    retval+="." + extension;
  }
  return retval;
}
