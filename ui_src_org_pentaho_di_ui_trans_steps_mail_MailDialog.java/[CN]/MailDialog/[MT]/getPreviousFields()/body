      wAuthUser.removeAll();
      if (wAuthPass != null)       authpass=wAuthPass.getText();
      wAuthPass.removeAll();
      String subject=null;
      if (wSubject != null)       subject=wSubject.getText();
      wSubject.removeAll();
      String comment=null;
      if (wComment != null)       comment=wComment.getText();
      wComment.removeAll();
      String dynamFile=null;
