{
  string=Const.trimToType(string,getTrimType());
  if (Const.isEmpty(string))   return null;
  try {
    return (BigDecimal)getDecimalFormat(true).parse(string);
  }
 catch (  Exception e) {
    try {
      return new BigDecimal(string);
    }
 catch (    NumberFormatException ex) {
      throw new KettleValueException(toString() + " : couldn't convert string value '" + string+ "' to a number.",ex);
    }
  }
}
