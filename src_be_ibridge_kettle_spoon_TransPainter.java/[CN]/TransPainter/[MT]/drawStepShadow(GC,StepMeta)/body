{
  if (stepMeta == null)   return;
  Point pt=stepMeta.getLocation();
  int x, y;
  if (pt != null) {
    x=pt.x;
    y=pt.y;
  }
 else {
    x=50;
    y=50;
  }
  Point screen=real2screen(x,y);
  gc.setBackground(lightGray);
  gc.setForeground(lightGray);
  int s=shadowsize;
  gc.fillRectangle(screen.x + s,screen.y + s,iconsize,iconsize);
}
