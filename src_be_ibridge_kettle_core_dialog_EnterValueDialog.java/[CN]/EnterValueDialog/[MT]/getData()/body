{
  wValueType.setText(value.getTypeDesc());
  wInputString.setText(value.toString());
  setFormats();
  if (value.isNumber()) {
    wFormat.setText(Const.number_formats[0]);
  }
  if (value.isDate()) {
    wFormat.setText(Const.date_formats[0]);
  }
  wLength.setText("" + value.getLength());
  wPrecision.setText("" + value.getPrecision());
  wInputString.setFocus();
  wInputString.selectAll();
}
