{
  int[] triangle=new int[]{LEFT + MARGIN + x * fontwidth + offset.x,TOP - 4,LEFT + MARGIN + x * fontwidth + offset.x + 3,TOP + 1,LEFT + MARGIN + x * fontwidth + offset.x - 3,TOP + 1};
  gc.fillPolygon(triangle);
  gc.drawPolygon(triangle);
  gc.drawLine(LEFT + MARGIN + x * fontwidth + offset.x,TOP + 1,LEFT + MARGIN + x * fontwidth + offset.x,maxy);
}
