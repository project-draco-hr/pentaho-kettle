{
  if ("job-graph-hop-evaluation-uncond".equals(id)) {
    currentHop.setUnconditional();
    spoon.refreshGraph();
  }
 else   if ("job-graph-hop-evaluation-true".equals(id)) {
    currentHop.setConditional();
    currentHop.setEvaluation(true);
    spoon.refreshGraph();
  }
 else   if ("job-graph-hop-evaluation-false".equals(id)) {
    currentHop.setConditional();
    currentHop.setEvaluation(false);
    spoon.refreshGraph();
  }
}
