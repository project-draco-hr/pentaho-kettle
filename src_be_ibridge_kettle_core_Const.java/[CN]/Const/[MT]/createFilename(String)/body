{
  StringBuffer filename=new StringBuffer();
  for (int i=0; i < name.length(); i++) {
    char c=name.charAt(i);
    if (Character.isUnicodeIdentifierPart(c)) {
      filename.append(c);
    }
 else     if (Character.isWhitespace(c)) {
      filename.append("_");
    }
  }
  return filename.toString().toLowerCase();
}
