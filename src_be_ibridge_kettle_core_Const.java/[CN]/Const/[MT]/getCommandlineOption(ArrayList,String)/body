{
  String retval=null;
  String optstr=option + "=";
  for (int i=args.size() - 1; i >= 0; i--) {
    String arg=(String)args.get(i);
    if (arg != null && arg.toUpperCase().startsWith(optstr.toUpperCase())) {
      retval=arg.substring(optstr.length());
      args.remove(i);
    }
  }
  return retval;
}
