{
  SlaveServer slaveServer=new SlaveServer();
  slaveServer.setID(id_slave_server);
  RowMetaAndData row=getSlaveServer(id_slave_server);
  if (row == null) {
    throw new KettleDatabaseException(BaseMessages.getString(PKG,"SlaveServer.SlaveCouldNotBeFound",Long.toString(id_slave_server)));
  }
  slaveServer.setName(row.getString(Repository.FIELD_SLAVE_NAME,null));
  slaveServer.setHostname(row.getString(Repository.FIELD_SLAVE_HOST_NAME,null));
  slaveServer.setPort(row.getString(Repository.FIELD_SLAVE_PORT,null));
  slaveServer.setUsername(row.getString(Repository.FIELD_SLAVE_USERNAME,null));
  slaveServer.setPassword(row.getString(Repository.FIELD_SLAVE_PASSWORD,null));
  slaveServer.setProxyHostname(row.getString(Repository.FIELD_SLAVE_PROXY_HOST_NAME,null));
  slaveServer.setProxyPort(row.getString(Repository.FIELD_SLAVE_PROXY_PORT,null));
  slaveServer.setNonProxyHosts(row.getString(Repository.FIELD_SLAVE_NON_PROXY_HOSTS,null));
  slaveServer.setMaster(row.getBoolean(Repository.FIELD_SLAVE_MASTER,false));
  return slaveServer;
}
