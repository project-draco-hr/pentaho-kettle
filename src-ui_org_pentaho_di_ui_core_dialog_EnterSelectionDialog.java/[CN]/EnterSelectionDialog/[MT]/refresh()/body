{
  wSelection.removeAll();
  for (int i=0; i < choices.length; i++) {
    if (quickSearch) {
      if (wbRegex.getSelection()) {
        if (pattern != null) {
          Matcher matcher=pattern.matcher(choices[i]);
          if (matcher.matches())           wSelection.add(choices[i]);
        }
 else {
          wSelection.add(choices[i]);
        }
      }
 else {
        if (filterString != null) {
          if (choices[i].toUpperCase().contains(filterString))           wSelection.add(choices[i]);
        }
 else {
          wSelection.add(choices[i]);
        }
      }
    }
 else     wSelection.add(choices[i]);
  }
  wSelection.redraw();
}
