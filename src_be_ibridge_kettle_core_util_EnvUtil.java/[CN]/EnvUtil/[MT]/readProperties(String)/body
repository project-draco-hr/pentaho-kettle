{
  Properties props=new Properties();
  String kettlePropsFilename=Const.getKettleDirectory() + Const.FILE_SEPARATOR + fileName;
  InputStream is=null;
  try {
    is=new FileInputStream(kettlePropsFilename);
    props.load(is);
  }
 catch (  IOException ioe) {
    log.println(LogWriter.LOG_LEVEL_BASIC,"Unable to read \"<home>/.kettle/kettle.properties\" file: " + ioe.getMessage());
  }
 finally {
    if (is != null)     try {
      is.close();
    }
 catch (    IOException e) {
    }
  }
  return props;
}
