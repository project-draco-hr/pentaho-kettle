{
  Hashtable<String,String> env=new Hashtable<String,String>();
  setupEnvironment(env,username,password);
  try {
    doConnect(username,password);
    if (log.isBasic())     log.logBasic(BaseMessages.getString(PKG,"LDAPInput.Log.ConnectedToServer",hostname,Const.NVL(username,"")));
    if (log.isDetailed())     log.logDetailed(BaseMessages.getString(PKG,"LDAPInput.ClassUsed.Message",ctx.getClass().getName()));
  }
 catch (  Exception e) {
    throw new KettleException(BaseMessages.getString(PKG,"LDAPinput.Exception.ErrorConnecting",e.getMessage()),e);
  }
}
