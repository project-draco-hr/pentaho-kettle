{
  List ids=new ArrayList();
  ResultSet rs=database.openQuery(sql);
  try {
    Row r=database.getRow(rs);
    while (r != null) {
      ids.add(r.getValue(0).getString());
      r=database.getRow(rs);
    }
  }
  finally {
    if (rs != null) {
      database.closeQuery(rs);
    }
  }
  return (String[])ids.toArray(new String[ids.size()]);
}
