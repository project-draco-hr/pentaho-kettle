{
  int swt=SWT.NORMAL;
  if (fontBold)   swt=SWT.BOLD;
  if (fontItalic)   swt=swt | SWT.ITALIC;
  Font font=new Font(PropsUI.getDisplay(),fontName,fontSize,swt);
  int index=fonts.indexOf(font);
  if (index < 0) {
    fonts.add(font);
  }
 else {
    font.dispose();
    font=fonts.get(index);
  }
  gc.setFont(font);
}
