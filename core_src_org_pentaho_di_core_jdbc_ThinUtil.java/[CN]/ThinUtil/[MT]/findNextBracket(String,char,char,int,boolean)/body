{
  int counter=0;
  for (int i=index; i < sql.length(); i++) {
    i=skipChars(sql,i,'\'');
    if (i >= sql.length())     break;
    char c=sql.charAt(i);
    if (c == skipChar)     counter++;
    if (c == nextChar)     counter--;
    if (counter == 0) {
      return i;
    }
  }
  throw new KettleSQLException("No closing " + nextChar + " bracket found for "+ skipChar+ " at location "+ index+ " in : ["+ sql+ "]");
}
