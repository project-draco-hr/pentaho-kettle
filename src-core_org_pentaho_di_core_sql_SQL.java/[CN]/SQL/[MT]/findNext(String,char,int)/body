{
  int quoteIndex=index;
  index++;
  while (index < sql.length() && sql.charAt(index) != nextChar)   index++;
  if (index + 1 > sql.length()) {
    throw new KettleSQLException("No closing " + nextChar + " found, starting at location "+ quoteIndex+ " in : ["+ sql+ "]");
  }
  index++;
  return index;
}
