{
  String title=Messages.getString("SpoonGraph.Dialog.Title.StepDescription");
  String message=Messages.getString("SpoonGraph.Dialog.Message.StepDescription");
  EnterTextDialog dd=new EnterTextDialog(shell,title,message,stepMeta.getDescription());
  String d=dd.open();
