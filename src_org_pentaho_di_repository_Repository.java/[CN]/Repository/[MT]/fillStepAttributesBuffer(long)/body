{
  String sql="SELECT ID_STEP, CODE, NR, VALUE_NUM, VALUE_STR " + "FROM R_STEP_ATTRIBUTE " + "WHERE ID_TRANSFORMATION = " + id_transformation + " "+ "ORDER BY ID_STEP, CODE, NR";
  stepAttributesBuffer=database.getRows(sql,-1);
  stepAttributesRowMeta=database.getReturnRowMeta();
  Collections.sort(stepAttributesBuffer,new StepAttributeComparator());
}
