{
  if (trans != null) {
    if (trans.isFinished() && (running || halted)) {
      log.logMinimal(Spoon.APP_NAME,Messages.getString("SpoonLog.Log.TransformationHasFinished"));
      running=false;
      initialized=false;
      halted=false;
      halting=false;
      try {
        trans.endProcessing("end");
        if (spoonHistoryRefresher != null)         spoonHistoryRefresher.markRefreshNeeded();
      }
 catch (      KettleException e) {
        new ErrorDialog(shell,Messages.getString("SpoonLog.Dialog.ErrorWritingLogRecord.Title"),Messages.getString("SpoonLog.Dialog.ErrorWritingLogRecord.Message"),e);
      }
      wStart.setEnabled(true);
      wStop.setEnabled(false);
    }
  }
}
