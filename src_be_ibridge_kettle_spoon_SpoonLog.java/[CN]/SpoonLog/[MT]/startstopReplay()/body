{
  DateValidator dateValidator=new DateValidator();
  InputDialog id=new InputDialog(shell,Messages.getString("SpoonLog.Dialog.Title.EnterReplayDate"),Messages.getString("SpoonLog.Dialog.Message.WhatIsTheExecutionDate1") + Const.CR + Messages.getString("SpoonLog.Dialog.Message.WhatIsTheExecutionDate2"),dateValidator.df.format(new Date()),dateValidator);
  int answer=id.open();
  if (answer == 1) {
    log.logDebug(toString(),Messages.getString("SpoonLog.Log.CancelReplay1"));
    return;
  }
  if (dateValidator.date == null) {
    log.logDebug(toString(),Messages.getString("SpoonLog.Log.CancelReplay2"));
    return;
  }
  startstop(dateValidator.date);
}
