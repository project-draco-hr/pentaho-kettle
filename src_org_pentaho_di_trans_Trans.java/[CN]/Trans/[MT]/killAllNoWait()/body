{
  if (steps == null)   return;
  for (int i=0; i < steps.size(); i++) {
    StepMetaDataCombi sid=steps.get(i);
    BaseStep thr=(BaseStep)sid.step;
    if (log.isDebug())     log.logDebug(toString(),Messages.getString("Trans.Log.LookingAtStep") + thr.getStepname());
    thr.stopAll();
    try {
      Thread.sleep(20);
    }
 catch (    Exception e) {
      log.logError(toString(),Messages.getString("Trans.Log.TransformationErrors") + e.toString());
      return;
    }
  }
}
