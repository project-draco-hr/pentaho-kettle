{
  if (steps == null)   return;
  int nrStepsFinished=0;
  for (int i=0; i < steps.size(); i++) {
    StepMetaDataCombi sid=steps.get(i);
    BaseStep thr=(BaseStep)sid.step;
    if (log.isDebug())     log.logDebug(toString(),BaseMessages.getString(PKG,"Trans.Log.LookingAtStep") + thr.getStepname());
    while (thr.isAlive()) {
      thr.stopAll();
      try {
        Thread.sleep(20);
      }
 catch (      Exception e) {
        log.logError(toString(),BaseMessages.getString(PKG,"Trans.Log.TransformationErrors") + e.toString());
        return;
      }
    }
    if (!thr.isAlive())     nrStepsFinished++;
  }
  if (nrStepsFinished == steps.size())   finished.set(true);
}
