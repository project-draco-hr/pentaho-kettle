{
  java.util.regex.Pattern p=java.util.regex.Pattern.compile("((\\w|')+)");
  java.util.regex.Matcher m=p.matcher(input);
  StringBuffer sb=new StringBuffer();
  while (m.find())   m.appendReplacement(sb,Character.toUpperCase(m.group().charAt(0)) + m.group().substring(1).toLowerCase());
  m.appendTail(sb);
  return sb.toString();
}
