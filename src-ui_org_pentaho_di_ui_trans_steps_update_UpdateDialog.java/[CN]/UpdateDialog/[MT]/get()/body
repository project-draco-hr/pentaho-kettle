{
  try {
    RowMetaInterface r=transMeta.getPrevStepFields(stepname);
    if (r != null && !r.isEmpty()) {
      TableItemInsertListener listener=new TableItemInsertListener(){
        public boolean tableItemInserted(        TableItem tableItem,        ValueMetaInterface v){
          tableItem.setText(2,"=");
          return true;
        }
      }
;
      BaseStepDialog.getFieldsFromPrevious(r,wKey,1,new int[]{1,3},new int[]{},-1,-1,listener);
    }
  }
 catch (  KettleException ke) {
    new ErrorDialog(shell,Messages.getString("UpdateDialog.FailedToGetFields.DialogTitle"),Messages.getString("UpdateDialog.FailedToGetFields.DialogMessage"),ke);
  }
}
