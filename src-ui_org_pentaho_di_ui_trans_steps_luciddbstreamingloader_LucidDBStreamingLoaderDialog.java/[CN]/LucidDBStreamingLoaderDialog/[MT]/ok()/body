{
  if (Const.isEmpty(wStepname.getText()))   return;
  getInfo(input);
  RowMetaInterface prev;
  try {
    prev=transMeta.getPrevStepFields(stepname);
    if (BaseMessages.getString(PKG,"LucidDBStreamingLoaderDialog.Operation.CCombo.Item4").equals(input.getOperation())) {
      input.setSql_statement(input.getCustom_sql());
    }
 else {
      input.setSql_statement(input.getSQLStatements(prev));
    }
    input.setSelectStmt(input.getselectStmtForCreateTb(prev));
  }
 catch (  KettleStepException e) {
    e.printStackTrace();
  }
  if (input.getDatabaseMeta() == null) {
    MessageBox mb=new MessageBox(shell,SWT.OK | SWT.ICON_ERROR);
    mb.setMessage(BaseMessages.getString(PKG,"LucidDBStreamingLoaderDialog.InvalidConnection.DialogMessage"));
    mb.setText(BaseMessages.getString(PKG,"LucidDBStreamingLoaderDialog.InvalidConnection.DialogTitle"));
    mb.open();
  }
  dispose();
}
