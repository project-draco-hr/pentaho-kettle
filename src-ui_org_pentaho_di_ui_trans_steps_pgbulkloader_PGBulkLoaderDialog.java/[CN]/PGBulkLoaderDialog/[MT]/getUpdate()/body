{
  try {
    RowMetaInterface r=transMeta.getPrevStepFields(stepname);
    if (r != null) {
      TableItemInsertListener listener=new TableItemInsertListener(){
        public boolean tableItemInserted(        TableItem tableItem,        ValueMetaInterface v){
          if (v.getType() == ValueMetaInterface.TYPE_DATE) {
            tableItem.setText(3,Messages.getString("PGBulkLoaderDialog.DateMask.Label"));
          }
 else {
            tableItem.setText(3,"");
          }
          return true;
        }
      }
;
      BaseStepDialog.getFieldsFromPrevious(r,wReturn,1,new int[]{1,2},new int[]{},-1,-1,listener);
    }
  }
 catch (  KettleException ke) {
    new ErrorDialog(shell,Messages.getString("PGBulkLoaderDialog.FailedToGetFields.DialogTitle"),Messages.getString("PGBulkLoaderDialog.FailedToGetFields.DialogMessage"),ke);
  }
}
