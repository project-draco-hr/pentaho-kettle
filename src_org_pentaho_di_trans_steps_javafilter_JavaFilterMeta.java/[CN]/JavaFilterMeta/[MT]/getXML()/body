{
  StringBuffer retval=new StringBuffer();
  StreamInterface[] targetStreams=getStepIOMeta().getTargetStreams();
  retval.append(XMLHandler.addTagValue("send_true_to",targetStreams[0].getStepname()));
  retval.append(XMLHandler.addTagValue("send_false_to",targetStreams[1].getStepname()));
  retval.append(XMLHandler.addTagValue("condition",condition));
  return retval.toString();
}
