{
  String retval="";
  retval+="  <repository>" + Const.CR;
  retval+="    " + XMLHandler.addTagValue("name",name);
  retval+="    " + XMLHandler.addTagValue("description",description);
  retval+="    " + XMLHandler.addTagValue("connection",connection != null ? connection.getName() : null);
  retval+="    </repository>" + Const.CR;
  return retval;
}
