{
  LogWriter log=LogWriter.getInstance();
  boolean rcode=false;
  FileObject filefolder=null;
  try {
    filefolder=KettleVFS.getFileObject(foldername);
    System.gc();
    if (filefolder.exists()) {
      if (filefolder.getType() == FileType.FOLDER) {
        if (log.isDetailed())         log.logDetailed(toString(),BaseMessages.getString(PKG,"JobEntryDeleteFolders.ProcessingFolder",foldername));
        int Nr=filefolder.delete(new TextFileSelector());
        if (log.isDetailed())         log.logDetailed(toString(),BaseMessages.getString(PKG,"JobEntryDeleteFolders.TotalDeleted",foldername,String.valueOf(Nr)));
        rcode=true;
      }
 else {
        log.logError(toString(),BaseMessages.getString(PKG,"JobEntryDeleteFolders.Error.NotFolder"));
      }
    }
 else {
      if (log.isBasic())       log.logBasic(toString(),BaseMessages.getString(PKG,"JobEntryDeleteFolders.FolderAlreadyDeleted",foldername));
      rcode=true;
    }
  }
 catch (  IOException e) {
    log.logError(toString(),BaseMessages.getString(PKG,"JobEntryDeleteFolders.CouldNotDelete",foldername,e.getMessage()));
  }
 finally {
    if (filefolder != null) {
      try {
        filefolder.close();
      }
 catch (      IOException ex) {
      }
      ;
    }
  }
  return rcode;
}
