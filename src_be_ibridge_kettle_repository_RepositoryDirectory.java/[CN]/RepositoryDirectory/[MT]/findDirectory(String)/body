{
  String newPath[]=Const.splitPath(path,Const.FILE_SEPARATOR);
  String p[]=null;
  if (parent == null) {
    p=new String[newPath.length + 1];
    p[0]=Const.FILE_SEPARATOR;
    for (int i=0; i < newPath.length; i++) {
      p[i + 1]=newPath[i];
    }
  }
 else {
    p=newPath;
  }
  return findDirectory(p);
}
