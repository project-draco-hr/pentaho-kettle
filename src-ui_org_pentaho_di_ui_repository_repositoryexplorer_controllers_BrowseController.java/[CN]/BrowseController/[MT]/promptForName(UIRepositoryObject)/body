{
  XulPromptBox prompt=(XulPromptBox)document.createElement("promptbox");
  String currentName=(object == null) ? messages.getString("BrowserController.NewFolder") : object.getName();
  prompt.setTitle(messages.getString("BrowserController.Name").concat(currentName));
  prompt.setButtons(new DialogConstant[]{DialogConstant.OK,DialogConstant.CANCEL});
  prompt.setMessage(messages.getString("BrowserController.NameLabel").concat(currentName));
  prompt.setValue(currentName);
  return prompt;
}
