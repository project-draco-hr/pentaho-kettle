{
  Point area=getArea();
  if (area.x == 0 || area.y == 0)   return;
  Display disp=shell.getDisplay();
  if (disp.isDisposed())   return;
  Image img=new Image(disp,area.x,area.y);
  GC gc=new GC(img);
  drawJob(gc);
  e.gc.drawImage(img,0,0);
  gc.dispose();
  img.dispose();
  chef.setShellText();
}
