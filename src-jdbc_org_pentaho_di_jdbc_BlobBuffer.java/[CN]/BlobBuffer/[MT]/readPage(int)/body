{
  page=page & PAGE_MASK;
  if (bufferDirty) {
    writePage(currentPage);
  }
  if (page > raFile.length()) {
    throw new IOException("readPage: Invalid page number " + page);
  }
  currentPage=page;
  raFile.seek(currentPage);
  int count=0, res;
  do {
    res=raFile.read(buffer,count,buffer.length - count);
    count+=(res == -1) ? 0 : res;
  }
 while (count < PAGE_SIZE && res != -1);
}
