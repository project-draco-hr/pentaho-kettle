{
  if (buffer.length == 0) {
    buffer=new byte[Math.max(PAGE_SIZE,minSize)];
  }
 else {
    byte[] tmp;
    if (buffer.length * 2 > minSize && buffer.length <= MAX_BUF_INC) {
      tmp=new byte[buffer.length * 2];
    }
 else {
      tmp=new byte[minSize + MAX_BUF_INC];
    }
    System.arraycopy(buffer,0,tmp,0,buffer.length);
    buffer=tmp;
  }
}
